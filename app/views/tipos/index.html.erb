<% content_for :page_title, "Tipos" %>
<% content_for :page_description, "Gerencie os tipos dos produtos" %>
<% content_for :page_icon do %>
  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
  </svg>
<% end %>

<div class="container mx-auto">
  <div class="mb-2">
    <div class="flex justify-end items-center">
      <!-- Bot√£o Novo Tipo - Agora com modal -->
      <button onclick="abrirTipoModal('<%= new_tipo_path %>')" 
              class="px-6 py-3 bg-tags-rosa text-white rounded-lg font-medium hover:bg-tags-rosa-dark transition-colors duration-200 flex items-center gap-2 cursor-pointer">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Novo Tipo
      </button>
    </div>
  </div>

  <hr class="border-t border-gray-300 my-4">
  
  <% if @tipos.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sigla</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">A√ß√µes</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @tipos.each do |tipo| %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="font-medium text-gray-900"><%= tipo.tip_nome %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-600"><%= tipo.tip_sigla.presence || '-' %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <div class="flex justify-center space-x-2">
                    <!-- Bot√£o Editar - Agora com modal -->
                    <button onclick="abrirTipoModal('<%= edit_tipo_path(tipo) %>')" 
                            class="text-blue-600 hover:text-blue-900 font-medium text-sm px-3 py-1 border border-blue-600 rounded hover:bg-blue-50 transition-colors duration-200 cursor-pointer">
                      Editar
                    </button>
                    
                    <!-- Bot√£o Excluir -->
                    <%= link_to tipo_path(tipo), 
                                method: :delete, 
                                data: { confirm: 'Tem certeza que deseja excluir este tipo?' },
                                class: "text-red-600 hover:text-red-900 font-medium text-sm px-3 py-1 border border-red-600 rounded hover:bg-red-50 transition-colors duration-200" do %>
                      Excluir
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-8 text-center">
      <div class="max-w-md mx-auto">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhum tipo cadastrado</h3>
        <p class="text-gray-500 mb-4">Comece cadastrando os tipos dos seus produtos.</p>
        <!-- Bot√£o do estado vazio tamb√©m com modal -->
        <button onclick="abrirTipoModal('<%= new_tipo_path %>')" 
                class="px-6 py-2 bg-[#ed215e] text-white rounded-lg font-medium hover:bg-[#d91956] transition-colors duration-200 inline-flex items-center gap-2 cursor-pointer">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Novo Tipo
        </button>
      </div>
    </div>
  <% end %>
</div>

<!-- Modal para Tipos -->
<dialog id="tipoModal" class="modal-base">
  <div class="modal-container">
    <!-- Header -->
    <div class="modal-header no-print">
      <h3 class="modal-title" id="tipoModalTitle">Carregando...</h3>
      <button type="button" onclick="fecharModal('tipoModal')" class="modal-close-btn" title="Fechar">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Content -->
    <div class="modal-content-container">
      <div id="tipoFormContent" class="modal-content">
        <div class="flex justify-center items-center py-8">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-tags-rosa"></div>
          <span class="ml-2 text-gray-600">Carregando...</span>
        </div>
      </div>
    </div>

    <!-- Footer - VAZIO -->
    <div class="modal-footer no-print">
      <!-- Sem bot√µes - j√° temos Cancelar nos formul√°rios -->
    </div>
  </div>
</dialog>

<style>
