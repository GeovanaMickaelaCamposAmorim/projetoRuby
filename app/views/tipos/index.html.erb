<% content_for :page_title, "Tipos de Mercadoria" %>
<% content_for :page_description, "Gerencie os tipos de produtos" %>

<div class="space-y-6">
  <div class="flex justify-end">
    <button onclick="openModal('modalNovoTipo')" class="px-6 py-2 bg-tags-pink text-white rounded-lg font-medium hover:bg-opacity-90 transition">
      + Novo Tipo
    </button>
  </div>
  
  <div class="bg-white rounded-lg overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Nome</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Descrição</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @tipos&.each do |tipo| %>
          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4 text-sm font-medium text-tags-black"><%= tipo.nome %></td>
            <td class="px-6 py-4 text-sm text-tags-gray"><%= tipo.descricao %></td>
            <td class="px-6 py-4">
              <div class="flex items-center gap-2">
                <%= link_to tipo_path(tipo), method: :delete, data: { confirm: 'Tem certeza?' }, class: "p-2 text-red-600 hover:bg-red-50 rounded transition" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Modal Novo Tipo -->
<div id="modalNovoTipo" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg w-full max-w-md">
    <%= form_with model: Tipo.new, local: true, class: "p-6" do |f| %>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold text-tags-black">Novo Tipo</h2>
        <button type="button" onclick="closeModal('modalNovoTipo')" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-tags-gray mb-2">Nome do Tipo</label>
          <%= f.text_field :nome, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink", placeholder: "Ex: Camiseta, Calça, Vestido" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-tags-gray mb-2">Descrição</label>
          <%= f.text_area :descricao, rows: 3, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink", placeholder: "Descrição opcional" %>
        </div>
      </div>
      
      <div class="flex justify-end gap-3 mt-6 pt-6 border-t">
        <button type="button" onclick="closeModal('modalNovoTipo')" class="px-6 py-2 border border-gray-300 rounded-lg text-sm font-medium text-tags-gray hover:bg-gray-50 transition">
          Cancelar
        </button>
        <%= f.submit "Salvar", class: "px-6 py-2 bg-tags-black text-white rounded-lg text-sm font-medium hover:bg-opacity-90 transition" %>
      </div>
    <% end %>
  </div>
</div>
