<% content_for :page_title, "Clientes" %>
<% content_for :page_description, "Gerencie sua base de clientes" %>

<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div class="bg-white rounded-lg p-4 flex-1 mr-4">
      <div class="relative">
        <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <input type="text" placeholder="Buscar cliente..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink">
      </div>
    </div>
    
    <button onclick="openModal('modalNovoCliente')" class="px-6 py-2 bg-tags-pink text-white rounded-lg font-medium hover:bg-opacity-90 transition">
      + Novo Cliente
    </button>
  </div>
  
  <div class="bg-white rounded-lg overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Cliente</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Telefone</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">CPF</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Total Compras</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @clientes&.each do |cliente| %>
          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-400 to-cyan-500 flex items-center justify-center text-white font-semibold">
                  <%= cliente.nome.first.upcase %>
                </div>
                <span class="text-sm font-medium text-tags-black"><%= cliente.nome %></span>
              </div>
            </td>
            <td class="px-6 py-4 text-sm text-tags-gray"><%= cliente.email %></td>
            <td class="px-6 py-4 text-sm text-tags-gray"><%= cliente.telefone %></td>
            <td class="px-6 py-4 text-sm text-tags-gray"><%= cliente.cpf %></td>
            <td class="px-6 py-4 text-sm font-medium text-tags-black">R$ <%= number_to_currency(cliente.total_compras || 0, unit: '', delimiter: '.', separator: ',') %></td>
            <td class="px-6 py-4">
              <div class="flex items-center gap-2">
                <button onclick="verCliente(<%= cliente.id %>)" class="p-2 text-blue-600 hover:bg-blue-50 rounded transition">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                </button>
                <%= link_to cliente_path(cliente), method: :delete, data: { confirm: 'Tem certeza?' }, class: "p-2 text-red-600 hover:bg-red-50 rounded transition" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Modal Novo Cliente -->
<div id="modalNovoCliente" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg w-full max-w-md">
    <%= form_with model: Cliente.new, local: true, class: "p-6" do |f| %>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold text-tags-black">Novo Cliente</h2>
        <button type="button" onclick="closeModal('modalNovoCliente')" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-tags-gray mb-2">Nome Completo</label>
          <%= f.text_field :nome, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink", placeholder: "Nome do cliente" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-tags-gray mb-2">Email</label>
          <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink", placeholder: "email@exemplo.com" %>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-tags-gray mb-2">Telefone</label>
            <%= f.text_field :telefone, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink", placeholder: "(00) 00000-0000" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-tags-gray mb-2">CPF</label>
            <%= f.text_field :cpf, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink", placeholder: "000.000.000-00" %>
          </div>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-tags-gray mb-2">Endereço</label>
          <%= f.text_field :endereco, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink", placeholder: "Rua, número, bairro" %>
        </div>
      </div>
      
      <div class="flex justify-end gap-3 mt-6 pt-6 border-t">
        <button type="button" onclick="closeModal('modalNovoCliente')" class="px-6 py-2 border border-gray-300 rounded-lg text-sm font-medium text-tags-gray hover:bg-gray-50 transition">
          Cancelar
        </button>
        <%= f.submit "Salvar", class: "px-6 py-2 bg-tags-black text-white rounded-lg text-sm font-medium hover:bg-opacity-90 transition" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  function verCliente(id) {
    window.location.href = `/clientes/${id}`;
  }
</script>
