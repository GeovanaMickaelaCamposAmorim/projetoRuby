<% content_for :page_title, "Administração de Usuários" %>
<% content_for :page_description, "Gerencie funcionários e permissões" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div class="flex gap-3">
      <button class="px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-tags-gray hover:bg-gray-50 transition">
        Todos os usuários
      </button>
      <button class="px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-tags-gray hover:bg-gray-50 transition">
        Somente Ativos
      </button>
      <button class="px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-tags-gray hover:bg-gray-50 transition">
        Função
      </button>
    </div>
    
    <button onclick="openModal('modalNovoUsuario')" class="px-6 py-2 bg-tags-pink text-white rounded-lg font-medium hover:bg-opacity-90 transition">
      + Cadastrar Usuário
    </button>
  </div>
  
  <div class="bg-white rounded-lg p-4">
    <div class="relative">
      <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <input type="text" placeholder="Buscar usuário..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink">
    </div>
  </div>
  
  <div class="bg-white rounded-lg overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">
            <input type="checkbox" class="rounded border-gray-300">
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Usuário</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Função</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @usuarios&.each do |usuario| %>
          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4">
              <input type="checkbox" class="rounded border-gray-300">
            </td>
            <td class="px-6 py-4">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-pink-400 to-purple-500 flex items-center justify-center text-white font-semibold">
                  <%= usuario.email.first.upcase %>
                </div>
                <span class="text-sm font-medium text-tags-black"><%= usuario.email.split('@').first.capitalize %></span>
              </div>
            </td>
            <td class="px-6 py-4 text-sm text-tags-gray"><%= usuario.email %></td>
            <td class="px-6 py-4">
              <% case usuario.role %>
              <% when 'admin' %>
                <span class="px-3 py-1 text-xs font-medium bg-purple-100 text-purple-800 rounded-full">Admin</span>
              <% when 'vendedor' %>
                <span class="px-3 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">Vendedor</span>
              <% when 'master' %>
                <span class="px-3 py-1 text-xs font-medium bg-red-100 text-red-800 rounded-full">Master</span>
              <% else %>
                <span class="px-3 py-1 text-xs font-medium bg-gray-100 text-gray-800 rounded-full">Cliente</span>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <span class="px-3 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">Ativo</span>
            </td>
            <td class="px-6 py-4">
              <div class="flex items-center gap-2">
                <button onclick="editarUsuario(<%= usuario.id %>)" class="p-2 text-blue-600 hover:bg-blue-50 rounded transition">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                </button>
                <%= link_to usuario_path(usuario), method: :delete, data: { confirm: 'Tem certeza?' }, class: "p-2 text-red-600 hover:bg-red-50 rounded transition" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Modal Novo Usuário -->
<div id="modalNovoUsuario" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg w-full max-w-md">
    <%= form_with model: User.new, local: true, class: "p-6" do |f| %>
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold text-tags-black">Novo Usuário</h2>
        <button type="button" onclick="closeModal('modalNovoUsuario')" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-tags-gray mb-2">Nome</label>
          <%= f.text_field :nome, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink", placeholder: "Nome completo" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-tags-gray mb-2">Email</label>
          <%= f.email_field :email_address, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink", placeholder: "email@exemplo.com" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-tags-gray mb-2">Senha</label>
          <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink", placeholder: "••••••••" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-tags-gray mb-2">Telefone</label>
          <%= f.text_field :telefone, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink", placeholder: "(00) 00000-0000" %>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-tags-gray mb-2">Tipo</label>
            <%= f.select :role, options_for_select([['Admin', 'admin'], ['Vendedor', 'vendedor'], ['Master', 'master']]), {}, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-tags-gray mb-2">Status</label>
            <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink">
              <option>Ativo</option>
              <option>Inativo</option>
            </select>
          </div>
        </div>
      </div>
      
      <div class="flex justify-end gap-3 mt-6 pt-6 border-t">
        <button type="button" onclick="closeModal('modalNovoUsuario')" class="px-6 py-2 border border-gray-300 rounded-lg text-sm font-medium text-tags-gray hover:bg-gray-50 transition">
          Cancelar
        </button>
        <%= f.submit "Salvar", class: "px-6 py-2 bg-tags-black text-white rounded-lg text-sm font-medium hover:bg-opacity-90 transition" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  function editarUsuario(id) {
    console.log('[v0] Editar usuário:', id);
  }
</script>
