<% content_for :page_title, "Histórico de Vendas" %>
<% content_for :page_description, "Visualize e gerencie todas as vendas realizadas" %>

<div class="space-y-6">
  <div class="p-4 flex-shrink-0">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="bg-[#ed215e] p-2 rounded-lg">
          <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Histórico de Vendas</h1>
          <p class="text-gray-600">Visualize e gerencie todas as vendas realizadas</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-4 gap-4">
    <div class="bg-white rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-tags-gray">Vendas Hoje</p>
          <p class="text-2xl font-bold text-tags-black mt-1">R$ <%= number_to_currency(@vendas_hoje || 0, unit: '', delimiter: '.', separator: ',') %></p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-tags-gray">Vendas Mês</p>
          <p class="text-2xl font-bold text-tags-black mt-1">R$ <%= number_to_currency(@vendas_mes || 0, unit: '', delimiter: '.', separator: ',') %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-tags-gray">Total Vendas</p>
          <p class="text-2xl font-bold text-tags-black mt-1"><%= @total_vendas || 0 %></p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-tags-gray">Ticket Médio</p>
          <p class="text-2xl font-bold text-tags-black mt-1">R$ <%= number_to_currency(@ticket_medio || 0, unit: '', delimiter: '.', separator: ',') %></p>
        </div>
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg p-4 flex items-center gap-4">
    <div class="flex-1 relative">
      <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <input type="text" placeholder="Buscar venda..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink">
    </div>

    <input type="date" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink">

    <select class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink">
      <option>Todas as formas</option>
      <option>PIX</option>
      <option>Cartão Crédito</option>
      <option>Crediário</option>
      <option>Dinheiro</option>
    </select>
  </div>

  <!-- Table Corrigida -->
  <div class="bg-white rounded-lg overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">ID Venda</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Cliente</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Vendedor</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Data/Hora</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Valor Total</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Desconto</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Valor Final</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Pagamento</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% if @vendas&.any? %>
          <% @vendas.each do |venda| %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-6 py-4 text-sm font-medium text-tags-black">#<%= venda.id.to_s.rjust(5, '0') %></td>
              <td class="px-6 py-4 text-sm text-tags-gray"><%= venda.cliente&.nome || 'Cliente Avulso' %></td>
              
              <!-- Vendedor -->
              <td class="px-6 py-4 text-sm text-tags-gray">
                <% if venda.user %>
                  <%= venda.user.usu_nome %>
                <% else %>
                  Sistema
                <% end %>
              </td>
              
              <!-- Data/Hora - CORRIGIDO: usando ven_data em vez de created_at -->
              <td class="px-6 py-4 text-sm text-tags-gray"><%= venda.ven_data.strftime('%d/%m/%Y %H:%M') %></td>
              
              <!-- Valores -->
              <td class="px-6 py-4 text-sm text-tags-gray">R$ <%= number_to_currency(venda.ven_valor_total, unit: '', delimiter: '.', separator: ',') %></td>
              <td class="px-6 py-4 text-sm text-tags-gray">R$ <%= number_to_currency(venda.ven_desconto || 0, unit: '', delimiter: '.', separator: ',') %></td>
              <td class="px-6 py-4 text-sm font-medium text-tags-black">R$ <%= number_to_currency(venda.ven_valor_final, unit: '', delimiter: '.', separator: ',') %></td>
              
              <!-- Forma de pagamento - CORRIGIDO: usando ven_forma_pagamento -->
              <td class="px-6 py-4">
                <span class="px-3 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                  <%= venda.ven_forma_pagamento&.capitalize || 'N/A' %>
                </span>
              </td>
              
              <td class="px-6 py-4">
                <div class="flex items-center gap-2">
                  <button onclick="verDetalhes(<%= venda.id %>)" class="p-2 text-blue-600 hover:bg-blue-50 rounded transition">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  </button>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="9" class="px-6 py-8 text-center text-gray-500">
              Nenhuma venda encontrada
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


  <!-- Modal para detalhes da venda -->
  <div id="vendaModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
    <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-1/2 shadow-lg rounded-md bg-white">
      <div class="mt-3">
        <!-- Cabeçalho do Modal -->
        <div class="flex items-center justify-between p-4 border-b">
          <h3 class="text-xl font-bold text-gray-900">Detalhes da Venda</h3>
          <button onclick="fecharModal()" class="text-gray-400 hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <!-- Conteúdo do Modal -->
        <div class="p-4 space-y-4">
          <div id="modalContent">
            <!-- O conteúdo será carregado via JavaScript -->
            <div class="flex justify-center items-center py-8">
              <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-[#ed215e]"></div>
            </div>
          </div>
        </div>

        <!-- Rodapé do Modal -->
        <div class="flex justify-end p-4 border-t">
          <button onclick="fecharModal()" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition">
            Fechar
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
// Função para abrir o modal com os detalhes da venda
function verDetalhes(id) {
  console.log('Abrindo modal para venda ID:', id);
  
  // Mostra o modal
  document.getElementById('vendaModal').classList.remove('hidden');
  
  // Mostra loading
  document.getElementById('modalContent').innerHTML = `
    <div class="flex justify-center items-center py-8">
      <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-[#ed215e]"></div>
    </div>
  `;
  
  // Busca os dados da venda - usando a rota details
  fetch(`/vendas/${id}/details`)
    .then(response => {
      if (!response.ok) {
        throw new Error('Erro na requisição: ' + response.status);
      }
      return response.json();
    })
    .then(data => {
      console.log('Dados recebidos:', data);
      
      // Formata os itens da venda
      const itensHTML = data.itens.map(item => `
        <div class="flex justify-between items-center py-2 border-b">
          <div class="flex-1">
            <p class="font-medium">${item.produto}</p>
            <p class="text-sm text-gray-600">${item.quantidade} x ${item.preco_unitario}</p>
          </div>
          <div class="text-right">
            <p class="font-medium">${item.subtotal}</p>
          </div>
        </div>
      `).join('');
      
      // Atualiza o conteúdo do modal
      document.getElementById('modalContent').innerHTML = `
        <div class="space-y-4">
          <!-- Informações principais -->
          <div class="grid grid-cols-2 gap-4">
            <div>
              <p class="text-sm text-gray-600">Número da Venda</p>
              <p class="font-medium">#${data.numero}</p>
            </div>
            <div>
              <p class="text-sm text-gray-600">Data/Hora</p>
              <p class="font-medium">${data.data}</p>
            </div>
            <div>
              <p class="text-sm text-gray-600">Cliente</p>
              <p class="font-medium">${data.cliente}</p>
            </div>
            <div>
              <p class="text-sm text-gray-600">Vendedor</p>
              <p class="font-medium">${data.vendedor}</p>
            </div>
          </div>
          
          <!-- Itens da venda -->
          <div class="border rounded-lg p-4">
            <h4 class="font-bold text-lg mb-3">Itens da Venda</h4>
            <div class="space-y-2">
              ${itensHTML}
            </div>
          </div>
          
          <!-- Resumo financeiro -->
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="flex justify-between py-1">
              <span class="text-gray-600">Valor Total:</span>
              <span class="font-medium">${data.valor_total}</span>
            </div>
            <div class="flex justify-between py-1">
              <span class="text-gray-600">Desconto:</span>
              <span class="font-medium">${data.desconto}</span>
            </div>
            <div class="flex justify-between py-1 border-t">
              <span class="text-gray-600 font-bold">Valor Final:</span>
              <span class="font-bold text-lg text-[#ed215e]">${data.valor_final}</span>
            </div>
            <div class="flex justify-between py-1">
              <span class="text-gray-600">Forma de Pagamento:</span>
              <span class="font-medium">${data.forma_pagamento}</span>
            </div>
          </div>
        </div>
      `;
    })
    .catch(error => {
      console.error('Erro:', error);
      document.getElementById('modalContent').innerHTML = `
        <div class="text-center py-8">
          <p class="text-red-600">Erro ao carregar os detalhes da venda.</p>
          <p class="text-sm text-gray-600">${error.message}</p>
        </div>
      `;
    });
}

// Função para fechar o modal
function fecharModal() {
  document.getElementById('vendaModal').classList.add('hidden');
}

// Fecha o modal ao clicar fora dele
document.getElementById('vendaModal').addEventListener('click', function(e) {
  if (e.target.id === 'vendaModal') {
    fecharModal();
  }
});
</script>