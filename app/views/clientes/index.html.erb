<% content_for :page_title, "Clientes" %>
<% content_for :page_description, "Gerencie os clientes do sistema" %>
<% content_for :page_icon do %>
  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
  </svg>
<% end %>

<div class="container mx-auto">
  <div class="mb-2">
    <div class="flex justify-end items-center">
      <!-- Bot√£o Novo Cliente COM MODAL -->
      <button onclick="abrirClienteModal('<%= new_cliente_path %>')" 
              class="px-6 py-3 bg-tags-rosa text-white rounded-lg font-medium hover:bg-tags-rosa-dark transition-colors duration-200 flex items-center gap-2 cursor-pointer">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Novo Cliente
      </button>
    </div>

    <hr class="border-t border-gray-300 my-4">

    <div class="flex flex-col sm:flex-row justify-end items-start sm:items-center gap-4 mb-6">
      <div class="w-full sm:w-2/3">
        <%= form_with url: clientes_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-2" do %>
          <!-- Campo de busca por texto -->
          <div class="flex-1">
            <%= text_field_tag :search, params[:search], 
                  class: "w-full bg-tags-branco border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", 
                  placeholder: "Buscar por nome, email ou telefone..." %>
          </div>
          
          <!-- Filtro por status -->
          <div class="w-full sm:w-48 bg-tags-branco rounded-lg">
            <%= select_tag :status, 
                  options_for_select([
                    ['Todos os status', ''],
                    ['Ativo', 'ativo'],
                    ['Inativo', 'inativo']
                  ], params[:status]),
                  class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>
          
          <!-- Bot√µes -->
          <div class="flex gap-2">
            <%= submit_tag "Buscar", class: "bg-tags-branco border border-tags-cinza text-tags-cinza hover:bg-tags-cinza hover:text-tags-branco font-medium py-2 px-4 rounded-lg transition-colors duration-200 cursor-pointer" %>
            <%= link_to "Limpar", clientes_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
          </div>
        <% end %>
      </div>
    </div>

    <% if @clientes.any? %>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contato</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">CPF</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">A√ß√µes</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @clientes.each do |cliente| %>
                <tr class="hover:bg-gray-50 transition-colors duration-150">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="font-medium text-gray-900"><%= cliente.cli_nome %></div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-600">
                      <div><%= cliente.cli_email %></div>
                      <% if cliente.cli_telefone1.present? %>
                        <div class="text-gray-500"><%= cliente.cli_telefone1 %></div>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= cliente.cli_cpf.present? ? cliente.cli_cpf : 'N√£o informado' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= cliente.status_class %>">
                      <%= cliente.status_display %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <div class="flex justify-center space-x-2">
                      <!-- Bot√£o Visualizar - NOVO -->
                      <button onclick="abrirClienteModal('<%= cliente_path(cliente) %>')" 
                              class="text-green-600 hover:text-green-900 font-medium text-sm px-3 py-1 border border-green-600 rounded hover:bg-green-50 transition-colors duration-200 cursor-pointer">
                        Visualizar
                      </button>
                      
                      <!-- Bot√£o Editar COM MODAL -->
                      <button onclick="abrirClienteModal('<%= edit_cliente_path(cliente) %>')" 
                              class="text-blue-600 hover:text-blue-900 font-medium text-sm px-3 py-1 border border-blue-600 rounded hover:bg-blue-50 transition-colors duration-200 cursor-pointer">
                        Editar
                      </button>
                      
                      <!-- Bot√£o Excluir -->
                      <%= link_to cliente_path(cliente), 
                                  method: :delete, 
                                  data: { confirm: 'Tem certeza que deseja excluir este cliente?' },
                                  class: "text-red-600 hover:text-red-900 font-medium text-sm px-3 py-1 border border-red-600 rounded hover:bg-red-50 transition-colors duration-200" do %>
                        Excluir
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-8 text-center">
        <div class="max-w-md mx-auto">
          <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
          </svg>
          <h3 class="text-lg font-medium text-gray-900 mb-2">
            <% if params[:search].present? || params[:status].present? %>
              Nenhum cliente encontrado
            <% else %>
              Nenhum cliente cadastrado
            <% end %>
          </h3>
          <p class="text-gray-500 mb-4">
            <% if params[:search].present? || params[:status].present? %>
              Tente ajustar os filtros de busca.
            <% else %>
              Comece cadastrando seus clientes.
            <% end %>
          </p>
          <!-- Bot√£o do estado vazio tamb√©m com modal -->
          <button onclick="abrirClienteModal('<%= new_cliente_path %>')" 
                  class="px-6 py-2 bg-tags-rosa text-white rounded-lg font-medium hover:bg-tags-rosa-dark transition-colors duration-200 inline-flex items-center gap-2 cursor-pointer">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Novo Cliente
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Modal para Clientes -->
<dialog id="clienteModal" class="modal-base">
  <div class="modal-container">
    <!-- Header -->
    <div class="modal-header no-print">
      <h3 class="modal-title" id="clienteModalTitle">Carregando...</h3>
      <button type="button" onclick="fecharModal('clienteModal')" class="modal-close-btn" title="Fechar">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Content -->
    <div class="modal-content-container">
      <div id="clienteFormContent" class="modal-content">
        <div class="flex justify-center items-center">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-tags-rosa"></div>
          <span class="ml-2 text-gray-600">Carregando...</span>
        </div>
      </div>
    </div>

    <!-- Footer - VAZIO -->
    <div class="modal-footer no-print">
      <!-- Sem bot√µes - j√° temos Cancelar nos formul√°rios -->
    </div>
  </div>
</dialog>

