<%= form_with model: ficha_crediario, class: "mx-auto bg-white p-6 rounded-lg " do |form| %>
  <% if ficha_crediario.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <h4 class="text-red-800 font-medium mb-2">
        <%= pluralize(ficha_crediario.errors.count, "erro") %> impediram a ficha de ser salva:
      </h4>
      <ul class="text-red-700 list-disc list-inside">
        <% ficha_crediario.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
  <!-- Cliente -->
  <div>
    <%= form.label :cliente_id, "Cliente", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :cliente_id, Cliente.all.order(:cli_nome), :id, :cli_nome,
          { prompt: "Selecione um cliente" },
          class: "w-full border border-gray-300 rounded-lg px-4 py-2 
                 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent cursor-pointer",
          required: true %>
  </div>

  <!-- Contratante -->
  <div>
    <%= form.label :contratante_id, "Contratante", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :contratante_id, Contratante.all.order(:cnt_nome_loja), :id, :cnt_nome_loja,
          { prompt: "Selecione um contratante" },
          class: "w-full border border-gray-300 rounded-lg px-4 py-2 
                 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent cursor-pointer",
          required: true %>
  </div>
</div>


    <div>
      <%= form.label :fic_valor_total, "Valor Total", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="relative">
        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 text-sm">R$</span>
        <%= form.text_field :fic_valor_total,
              class: "w-full border border-gray-300 rounded-lg pl-10 pr-4 py-2 
                      focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              required: true %>
      </div>
    </div>

    <div>
      <%= form.label :fic_status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :fic_status,
          [["Pendente", "pendente"], ["ConcluÃ­da", "concluida"]],
          {}, class: "w-full border border-gray-300 rounded-lg px-4 py-2
                      focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent cursor-pointer" %>
    </div>

  </div>

  <div class="mt-8 flex gap-3 justify-end">
    <button type="button"
            onclick="fecharModal('fichaModal')"
            class="px-5 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 
                   rounded-lg hover:bg-gray-50 transition-all duration-200 cursor-pointer">
      Cancelar
    </button>

    <%= form.submit "Salvar Ficha",
          class: "px-5 py-2.5 text-sm font-medium text-white bg-tags-rosa border border-transparent 
                 rounded-lg hover:bg-pink-700 transition-all duration-200 cursor-pointer" %>
  </div>

<% end %>
