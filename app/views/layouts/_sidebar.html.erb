<div class="flex h-screen">
  <div class="w-64 flex flex-col shadow-xl bg-tags-preto" id="sidebar-menu">
    <div class="flex items-center p-6 h-20">
      <div class="flex items-center justify-center space-x-3 w-full">
        <%= image_tag "logo-menu.png", alt: "Tags logo Menu", class: "w-20 h-auto" %>
      </div>
    </div>
    
    <nav class="flex-1 overflow-y-auto scrollbar-hide px-2 mt-4">
      <!-- HOME -->
      <div class="py-2">
        <div class="px-4 py-2 text-xs font-medium uppercase tracking-wider text-tags-branco">
          HOME
        </div>
        <div class="space-y-1">
          <% if current_user.admin_usu_tipo? %>
            <%= link_to '#', class: "flex items-center px-4 py-2 hover:bg-tags-rosa hover:text-white transition-colors rounded text-tags-branco" do %>
              <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
              <span>Dashboard</span>
            <% end %>
          <% end %>
          
          <%= link_to pdv_path, class: "flex items-center px-4 py-2 hover:bg-tags-rosa hover:text-white transition-colors rounded text-tags-branco" do %>
            <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
            <span>Ponto de Venda</span>
          <% end %>
          
          <%= link_to vendas_path, class: "flex items-center px-4 py-2 hover:bg-tags-rosa hover:text-white transition-colors rounded text-tags-branco" do %>
            <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
            <span>Histórico de Vendas</span>
          <% end %>
          
          <%= link_to gerar_etiqueta_path, class: "flex items-center px-4 py-2 hover:bg-tags-rosa hover:text-white transition-colors rounded text-tags-branco" do %>
            <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
            <span>Gerar Etiqueta</span>
          <% end %>
          
          <%= link_to gastos_path, class: "flex items-center px-4 py-2 hover:bg-tags-rosa hover:text-white transition-colors rounded text-tags-branco" do %>
            <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
            <span>Gastos</span>
          <% end %>
          
          <%= link_to '#', class: "flex items-center px-4 py-2 hover:bg-tags-rosa hover:text-white transition-colors rounded text-tags-branco" do %>
            <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
            <span>Ficha-Cliente</span>
          <% end %>
        </div>
      </div>
      
      <div class="border-t border-tags-cinza my-1"></div>
      
      <!-- ESTOQUE -->
      <div class="py-2">
        <div class="px-4 py-2 text-xs font-medium uppercase tracking-wider text-tags-branco">
          CONTROLE DE ESTOQUE
        </div>

        <!-- SUBMENU ESTOQUE -->
        <div class="cursor-pointer">
          <div class="flex items-center justify-between px-4 py-2 hover:bg-tags-rosa hover:text-white rounded text-tags-branco" data-submenu="estoque-submenu">
            <div class="flex items-center">
              <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
              <span>Estoque</span>
            </div>
            <div class="h-4 w-4 transition-transform submenu-arrow text-tags-branco"></div>
          </div>

          <div class="submenu hidden ml-4 mt-1" id="estoque-submenu">
            <div class="space-y-1 border-l border-tags-cinza ml-3 pl-2">
              <%= link_to '#', class: "flex items-center px-3 py-2 text-sm text-tags-branco hover:bg-tags-rosa hover:text-white rounded" do %>
                <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
                <span>Atualização de Estoque</span>
              <% end %>

              <%= link_to produtos_path, class: "flex items-center px-3 py-2 text-sm text-tags-branco hover:bg-tags-rosa hover:text-white rounded" do %>
                <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
                <span>Cadastro de Mercadoria</span>
              <% end %>
            </div>
          </div>
        </div>
        
        <!-- SUBMENU CONFIGURAÇÕES DE PRODUTO -->
        <div class="cursor-pointer">
          <div class="flex items-center justify-between px-4 py-2 hover:bg-tags-rosa hover:text-white rounded text-tags-branco" data-submenu="produto-submenu">
            <div class="flex items-center">
              <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
              <span>Configurações de Produto</span>
            </div>
            <div class="h-4 w-4 transition-transform submenu-arrow text-tags-branco"></div>
          </div>

          <div class="submenu hidden ml-4 mt-1" id="produto-submenu">
            <div class="space-y-1 border-l border-tags-cinza ml-3 pl-2">
              <%= link_to marcas_path, class: "flex items-center px-3 py-2 text-sm text-tags-branco hover:bg-tags-rosa hover:text-white rounded" do %>
                <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
                <span>Cadastro de Marcas</span>
              <% end %>

              <%= link_to tamanhos_path, class: "flex items-center px-3 py-2 text-sm text-tags-branco hover:bg-tags-rosa hover:text-white rounded" do %>
                <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
                <span>Cadastro de Tamanhos</span>
              <% end %>
              
              <%= link_to tipos_path, class: "flex items-center px-3 py-2 text-sm text-tags-branco hover:bg-tags-rosa hover:text-white rounded" do %>
                <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
                <span>Cadastro de Tipos</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- ADMIN -->
      <% if current_user.admin_usu_tipo? %>
        <div class="border-t border-tags-cinza my-1"></div>
        <div class="py-2">
          <div class="px-4 py-2 text-xs font-medium uppercase tracking-wider text-tags-branco">ADMIN</div>
          
          <%= link_to '#', class: "flex items-center px-4 py-2 hover:bg-tags-rosa hover:text-white rounded text-tags-branco" do %>
            <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
            <span>Relatórios</span>
          <% end %>
          
          <!-- SUBMENU CADASTROS -->
          <div class="cursor-pointer">
            <div class="flex items-center justify-between px-4 py-2 hover:bg-tags-rosa hover:text-white rounded text-tags-branco" data-submenu="cadastros-submenu">
              <div class="flex items-center">
                <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
                <span>Cadastros</span>
              </div>
              <div class="h-4 w-4 transition-transform submenu-arrow text-tags-branco"></div>
            </div>
            
            <div class="submenu hidden ml-4 mt-1" id="cadastros-submenu">
              <div class="space-y-1 border-l border-tags-cinza ml-3 pl-2">
                <%= link_to users_path, class: "flex items-center px-3 py-2 text-sm text-tags-branco hover:bg-tags-rosa hover:text-white rounded" do %>
                  <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
                  <span>Funcionários</span>
                <% end %>
                
                <%= link_to clientes_path, class: "flex items-center px-3 py-2 text-sm text-tags-branco hover:bg-tags-rosa hover:text-white rounded" do %>
                  <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
                  <span>Cliente</span>
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- SUBMENU CONFIGURAÇÕES -->
          <div class="cursor-pointer">
            <div class="flex items-center justify-between px-4 py-2 hover:bg-tags-rosa hover:text-white rounded text-tags-branco" data-submenu="config-submenu">
              <div class="flex items-center">
                <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
                <span>Configurações</span>
              </div>
              <div class="h-4 w-4 transition-transform submenu-arrow text-tags-branco"></div>
            </div>
            
            <div class="submenu hidden ml-4 mt-1" id="config-submenu">
              <div class="space-y-1 border-l border-tags-cinza ml-3 pl-2">
                <%= link_to configuracoes_path, class: "flex items-center px-3 py-2 text-sm text-tags-branco hover:bg-tags-rosa hover:text-white rounded" do %>
                  <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
                  <span>Perfil da Loja</span>
                <% end %>
                
                <%= link_to '#', class: "flex items-center px-3 py-2 text-sm text-tags-branco hover:bg-tags-rosa hover:text-white rounded" do %>
                  <div class="h-2 w-2 bg-tags-branco rounded-full mr-3"></div>
                  <span>Config. Taxas do Cartão</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </nav>
    
    <!-- LOGOUT -->
    <div class="p-4 border-t border-tags-branco">
      <%= button_to "Sair", session_path, method: :delete, class: "flex items-center justify-center w-full px-4 py-2 hover:bg-red-600 hover:text-white rounded transition-colors text-tags-branco" %>
    </div>
  </div>
</div>