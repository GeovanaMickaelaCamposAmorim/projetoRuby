// Fun√ß√£o para abrir modal de funcion√°rios
async function abrirUserModal(url) {
  try {
    console.log('üîç Abrindo modal de funcion√°rio para:', url);
    
    // Mostrar loading
    document.getElementById('userFormContent').innerHTML = `
      <div class="flex justify-center items-center py-8">
