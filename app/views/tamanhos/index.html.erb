.modal-base[open] {
  animation: modalSlideIn 0.3s ease-out;
}

.modal-container {
  background: white;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1rem 1.5rem;
  border-bottom: 1px solid #e5e7eb;
  background: white;
  position: sticky;
  top: 0;
  z-index: 10;
}

.modal-title {
  font-size: 1.125rem;
  font-weight: 600;
  color: #181818;
  margin: 0;
}

.modal-close-btn {
  padding: 0.5rem;
  border-radius: 0.5rem;
  transition: background-color 0.2s;
  border: none;
  background: transparent;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-close-btn:hover {
  background-color: #f3f4f6;
}

.modal-content-container {
  max-height: calc(90vh - 120px);
  overflow-y: auto;
  padding: 0 1.5rem;
}

.modal-content {
  padding: 1.5rem 0;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 0.75rem;
  padding: 1rem 1.5rem;
  border-top: 1px solid #e5e7eb;
  background: white;
  position: sticky;
  bottom: 0;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translate(-50%, -48%) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}
</style>

<script>
// Fun√ß√£o para abrir qualquer modal
function abrirModal(modalId) {
  console.log('üéØ Abrindo modal:', modalId);
  const modal = document.getElementById(modalId);
  if (modal) {
    modal.showModal();
    modal.classList.add('modal-open');
    
    // Adicionar evento para fechar com ESC
    modal.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        fecharModal(modalId);
      }
    });
    
    // Adicionar backdrop click
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        fecharModal(modalId);
      }
    });
  } else {
    console.error('‚ùå Modal n√£o encontrado:', modalId);
  }
}

// Fun√ß√£o para fechar qualquer modal
function fecharModal(modalId) {
  console.log('üéØ Fechando modal:', modalId);
  const modal = document.getElementById(modalId);
  if (modal) {
    modal.close();
    modal.classList.remove('modal-open');
  }
}

// Fechar modal com Cancelar (fun√ß√£o global)
function cancelarModal() {
  console.log('üéØ Cancelando modal...');
  // Fecha qualquer modal aberto
  const modals = document.querySelectorAll('dialog[open]');
  modals.forEach(modal => {
    modal.close();
    modal.classList.remove('modal-open');
  });
}

// Event Listeners para todos os modais <dialog>
document.addEventListener('DOMContentLoaded', function() {
  console.log('üöÄ Fun√ß√µes de modal carregadas!');
  
  document.querySelectorAll('dialog').forEach(modal => {
    modal.addEventListener('cancel', function() {
      this.close();
    });
    
    modal.addEventListener('click', function(event) {
      if (event.target === this) {
        this.close();
      }
    });
  });
  
  // Adicionar event listeners para todos os bot√µes de fechar
  document.querySelectorAll('[onclick*="fecharModal"], [onclick*="cancelarModal"]').forEach(btn => {
    console.log('‚úÖ Bot√£o de fechar encontrado:', btn);
  });
});

// Tornar fun√ß√µes globais
window.abrirModal = abrirModal;
window.fecharModal = fecharModal;
window.cancelarModal = cancelarModal;

console.log('‚úÖ Fun√ß√µes globais de modal definidas!');
</script>

<script>
// Fun√ß√£o para abrir modal de tamanhos - MESMO PADR√ÉO dos produtos
async function abrirTamanhoModal(url) {
  try {
    console.log('üîç Abrindo modal de tamanho para:', url);
    
    // Mostrar loading
    document.getElementById('tamanhoFormContent').innerHTML = `
      <div class="flex justify-center items-center py-8">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-tags-rosa"></div>
        <span class="ml-2 text-gray-600">Carregando...</span>
      </div>
    `;

    // Abrir modal - AGORA a fun√ß√£o global j√° deve estar dispon√≠vel
    if (typeof abrirModal === 'function') {
      abrirModal('tamanhoModal');
    } else {
      console.error('‚ùå abrirModal n√£o est√° definida!');
      // Fallback: abrir modal diretamente
      const modal = document.getElementById('tamanhoModal');
      if (modal) modal.showModal();
    }

    // Buscar o formul√°rio
    const response = await fetch(url);
    const html = await response.text();
    
    // Extrair apenas o conte√∫do do formul√°rio
    const parser = new DOMParser();
    const doc = parser.parseFromString(html, 'text/html');
    const formContent = doc.querySelector('form');
    
    if (formContent) {
      document.getElementById('tamanhoFormContent').innerHTML = formContent.outerHTML;
      
      // Atualizar o t√≠tulo do modal
      const modalTitle = document.getElementById('tamanhoModalTitle');
      if (modalTitle) {
        const isNew = url.includes('new');
        modalTitle.textContent = isNew ? 'Novo Tamanho' : 'Editar Tamanho';
      }
    } else {
      document.getElementById('tamanhoFormContent').innerHTML = `
        <div class="text-center py-8 text-red-600">
          Erro ao carregar formul√°rio
        </div>
      `;
    }
    
  } catch (error) {
    console.error('Erro:', error);
    document.getElementById('tamanhoFormContent').innerHTML = `
      <div class="text-center py-8 text-red-600">
        Erro: ${error.message}
      </div>
    `;
  }
}

// Fun√ß√£o para lidar com submit do formul√°rio de tamanhos
function handleTamanhoSubmit(event) {
  event.preventDefault();
  
  const form = event.target;
  const formData = new FormData(form);
  
  fetch(form.action, {
    method: form.method,
    body: formData,
    headers: {
      'X-Requested-With': 'XMLHttpRequest',
      'Accept': 'text/html'
    }
  })
  .then(response => {
    if (response.ok) {
      // Fechar modal e recarregar a p√°gina
      fecharModal('tamanhoModal');
      window.location.reload();
    } else {
      // Mostrar erros de valida√ß√£o
      return response.text().then(html => {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        const errorForm = doc.querySelector('form');
        if (errorForm) {
          document.getElementById('tamanhoFormContent').innerHTML = errorForm.outerHTML;
        }
      });
    }
  })
  .catch(error => {
    console.error('Erro:', error);
    alert('Erro ao salvar tamanho');
  });
}

// Adicionar event listener para forms din√¢micos de tamanhos
document.addEventListener('submit', function(event) {
  if (event.target.closest('#tamanhoFormContent')) {
    handleTamanhoSubmit(event);
  }
});

console.log('‚úÖ Script de tamanhos carregado!');
</script>