<% content_for :page_title, "Dashboard de Vendas" %>
<% content_for :page_description, "Visão geral do desempenho de vendas" %>
<% content_for :page_icon do %>
  <span class="material-symbols-outlined text-xl">dashboard</span>
<% end %>

<div class="space-y-6">

  <!-- Cards de Estatísticas -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Vendas do Mês -->
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Vendas do Mês</p>
          <p class="text-2xl font-bold text-gray-900 mt-2">
            R$ <%= number_to_currency(@vendas_mes || 0, unit: '', delimiter: '.', separator: ',') %>
          </p>
          <p class="text-xs text-green-600 mt-1 flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
            +12% vs mês anterior
          </p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Ticket Médio -->
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Ticket Médio</p>
          <p class="text-2xl font-bold text-gray-900 mt-2">
            R$ <%= number_to_currency(@ticket_medio || 0, unit: '', delimiter: '.', separator: ',') %>
          </p>
          <p class="text-xs text-green-600 mt-1 flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
            +5% vs mês anterior
          </p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Total de Vendas -->
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Total de Vendas</p>
          <p class="text-2xl font-bold text-gray-900 mt-2"><%= @total_vendas || 0 %></p>
          <p class="text-xs text-gray-500 mt-1">Este mês</p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Vendas Hoje -->
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Vendas Hoje</p>
          <p class="text-2xl font-bold text-gray-900 mt-2">
            R$ <%= number_to_currency(@vendas_hoje || 0, unit: '', delimiter: '.', separator: ',') %>
          </p>
          <p class="text-xs text-green-600 mt-1 flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
            +8% vs ontem
          </p>
        </div>
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Gráficos -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Gráfico de Vendas por Dia -->
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-900">Vendas por Dia (Últimos 30 dias)</h3>
        <select id="chartPeriod" class="text-sm border border-gray-300 rounded-lg px-3 py-1 focus:outline-none focus:ring-2 focus:ring-blue-500">
          <option value="7">7 dias</option>
          <option value="30" selected>30 dias</option>
          <option value="90">90 dias</option>
        </select>
      </div>
      <div class="h-80">
        <%= line_chart @vendas_por_dia, 
              colors: ["#ec4899"],
              curve: false,
              library: {
                plugins: {
                  legend: { display: false }
                },
                scales: {
                  y: {
                    beginAtZero: true,
                    grid: { color: '#f3f4f6' },
                    ticks: {
                      callback: function(value) {
                        return 'R$ ' + value.toLocaleString('pt-BR');
                      }
                    }
                  },
                  x: {
                    grid: { color: '#f3f4f6' }
                  }
                }
              } %>
      </div>
    </div>

    <!-- Gráfico de Formas de Pagamento -->
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <h3 class="text-lg font-semibold text-gray-900 mb-6">Formas de Pagamento</h3>
      <div class="h-80">
        <%= pie_chart @formas_pagamento,
              colors: ["#ec4899", "#8b5cf6", "#06b6d4", "#10b981", "#f59e0b"],
              library: {
                plugins: {
                  legend: {
                    position: 'bottom'
                  }
                }
              } %>
      </div>
    </div>
  </div>

  <!-- Tabela de Últimas Vendas -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Últimas Vendas</h3>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Valor</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pagamento</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% if @ultimas_vendas&.any? %>
            <% @ultimas_vendas.each do |venda| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 text-sm font-medium text-gray-900">#<%= venda.id.to_s.rjust(5, '0') %></td>
                <td class="px-6 py-4 text-sm text-gray-900"><%= venda.cliente&.cli_nome || 'Cliente Avulso' %></td>
                <td class="px-6 py-4 text-sm text-gray-500"><%= venda.ven_data.strftime('%d/%m/%Y %H:%M') %></td>
                <td class="px-6 py-4 text-sm font-medium text-gray-900">R$ <%= number_to_currency(venda.ven_valor_final, unit: '', delimiter: '.', separator: ',') %></td>
                <td class="px-6 py-4 text-sm text-gray-500"><%= venda.ven_forma_pagamento %></td>
                <td class="px-6 py-4">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Concluída
                  </span>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                Nenhuma venda encontrada
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
// Atualizar gráfico quando mudar o período
document.getElementById('chartPeriod').addEventListener('change', function(e) {
  // Aqui você pode fazer uma requisição AJAX para atualizar os dados do gráfico
  // ou recarregar a página com o novo período
  window.location.href = '<%= dashboard_vendas_path %>?period=' + e.target.value;
});

// Animação de contagem nos cards (opcional)
function animateValue(element, start, end, duration) {
  let startTimestamp = null;
  const step = (timestamp) => {
    if (!startTimestamp) startTimestamp = timestamp;
    const progress = Math.min((timestamp - startTimestamp) / duration, 1);
    const value = Math.floor(progress * (end - start) + start);
    element.textContent = value.toLocaleString('pt-BR');
    if (progress < 1) {
      window.requestAnimationFrame(step);
    }
  };
  window.requestAnimationFrame(step);
}

// Iniciar animações quando a página carregar
document.addEventListener('DOMContentLoaded', function() {
  // Animar valores dos cards (exemplo)
  const valueElements = document.querySelectorAll('.animate-value');
  valueElements.forEach(element => {
    const finalValue = parseInt(element.getAttribute('data-value'));
    animateValue(element, 0, finalValue, 2000);
  });
});
</script>