
<%= form_with model: @mov, url: @mov.persisted? ? movimentacao_crediario_path(@ficha, @mov) : movimentacao_crediarios_path(ficha_crediario_id: @ficha.id), local: false, html: { id: "movForm" } do |f| %>
  <div class="space-y-4">
    
    
    <div class="space-y-2">
      <%= f.label :mov_tipo, "Tipo de Movimentação", class: "block text-sm font-medium text-gray-700 text-left" %>
      <%= f.select :mov_tipo, options_for_select([["Pagamento", "pagamento"], ["Compra", "compra"], ["Juros", "juros"], ["Devolução", "devolucao"]], f.object.mov_tipo), {}, class: "w-full rounded-lg border border-gray-300 px-4 py-3 text-sm 
                 focus:border-tags-rosa focus:ring-2 focus:ring-tags-rosa/20 transition-all duration-200 cursor-pointer" %>
    </div>

    
    <div class="space-y-2">
      <%= f.label :mov_valor, "Valor", class: "block text-sm font-medium text-gray-700 text-left" %>
      <div class="relative">
        <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500 text-sm">R$</span>
        <%= f.number_field :mov_valor, step: 0.01, class: "w-full rounded-lg border border-gray-300 pl-10 pr-4 py-3 text-sm
                 focus:border-tags-rosa focus:ring-2 focus:ring-tags-rosa/20 transition-all duration-200", placeholder: "0,00" %>
      </div>
    </div>

  
    <div class="space-y-2">
      <%= f.label :mov_observacao, "Observação", class: "block text-sm font-medium text-gray-700 text-left" %>
      <%= f.text_area :mov_observacao, rows: 3, class: "w-full rounded-lg border border-gray-300 px-4 py-3 text-sm
             focus:border-tags-rosa focus:ring-2 focus:ring-tags-rosa/20 transition-all duration-200", placeholder: "Observações adicionais" %>
    </div>

  
    <div class="flex justify-end space-x-3 pt-4">
      <button type="button" onclick="fecharModal('movModal')" 
              class="px-5 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 
                     rounded-lg hover:bg-gray-50 transition-all duration-200 cursor-pointer">
        Cancelar
      </button>
      <%= f.submit @mov.persisted? ? "Atualizar" : "Salvar", 
            class: "px-5 py-2.5 text-sm font-medium text-white bg-tags-rosa border border-transparent 
                   rounded-lg hover:bg-pink-700 transition-all duration-200 cursor-pointer" %>
    </div>

  </div>
<% end %>
