<script>
console.log('Script carregado - iniciando submenus...');

// Usa turbo:load para funcionar com navegação Turbo
document.addEventListener('turbo:load', function() {
  console.log('Turbo load - configurando submenus...');
  setupSubmenus();
});

// Também usa DOMContentLoaded para carregamento inicial
document.addEventListener('DOMContentLoaded', function() {
  console.log('DOM carregado - configurando submenus...');
  setupSubmenus();
});

function setupSubmenus() {
  // Remove event listeners antigos para evitar duplicação
  const oldButtons = document.querySelectorAll('[data-submenu]');
  oldButtons.forEach(button => {
    button.replaceWith(button.cloneNode(true));
  });

  // Função para toggle de submenu
  function toggleSubmenu(button) {
    console.log('Clicou no submenu!');
    
    const submenuId = button.getAttribute('data-submenu');
    const submenu = document.getElementById(submenuId);
    const arrow = button.querySelector('.submenu-arrow');
    
    console.log('Submenu ID:', submenuId);
    console.log('Submenu encontrado:', submenu);
    console.log('Arrow encontrada:', arrow);
    
    if (submenu && submenu.classList.contains('hidden')) {
      submenu.classList.remove('hidden');
      if (arrow) arrow.classList.add('rotate-180');
      console.log('Submenu ABERTO');
    } else if (submenu) {
      submenu.classList.add('hidden');
      if (arrow) arrow.classList.remove('rotate-180');
      console.log('Submenu FECHADO');
    }
  }
  
  // Adiciona event listeners para todos os botões de submenu
  const submenuButtons = document.querySelectorAll('[data-submenu]');
  console.log('Botões de submenu encontrados:', submenuButtons.length);
  
  submenuButtons.forEach(button => {
    button.addEventListener('click', (e) => {
      console.log('Evento click capturado');
      e.preventDefault();
      e.stopPropagation();
      toggleSubmenu(button);
    });
  });
  
  console.log('Event listeners configurados');
}
</script>

<style>
.rotate-180 {
  transform: rotate(180deg);
}
</style>