<% content_for :page_title, "Histórico de Vendas" %>
<% content_for :page_description, "Visualize e gerencie todas as vendas realizadas" %>

<div class="space-y-6">

  <div class="p-4 flex-shrink-0">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="bg-[#ed215e] p-2 rounded-lg">
          <%=  variant: :solid, options: { class: "h-6 w-6", style: "color: white" } %>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Histórico de Vendas</h1>
          <p class="text-gray-600">Visualize e gerencie todas as vendas realizadas</p>
        </div>
      </div>
      
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-4 gap-4">
    <div class="bg-white rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-tags-gray">Vendas Hoje</p>
          <p class="text-2xl font-bold text-tags-black mt-1">R$ <%= number_to_currency(@vendas_hoje || 0, unit: '', delimiter: '.', separator: ',') %></p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-tags-gray">Vendas Mês</p>
          <p class="text-2xl font-bold text-tags-black mt-1">R$ <%= number_to_currency(@vendas_mes || 0, unit: '', delimiter: '.', separator: ',') %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-tags-gray">Total Vendas</p>
          <p class="text-2xl font-bold text-tags-black mt-1"><%= @total_vendas || 0 %></p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-tags-gray">Ticket Médio</p>
          <p class="text-2xl font-bold text-tags-black mt-1">R$ <%= number_to_currency(@ticket_medio || 0, unit: '', delimiter: '.', separator: ',') %></p>
        </div>
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Filters -->
  <div class="bg-white rounded-lg p-4 flex items-center gap-4">
    <div class="flex-1 relative">
      <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <input type="text" placeholder="Buscar venda..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink">
    </div>
    
    <input type="date" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink">
    
    <select class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink">
      <option>Todas as formas</option>
      <option>PIX</option>
      <option>Cartão Crédito</option>
      <option>Crediário</option>
      <option>Dinheiro</option>
    </select>
  </div>
  
  <!-- Table -->
  <div class="bg-white rounded-lg overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">ID Venda</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Cliente</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Vendedor</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Data/Hora</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Valor Total</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Desconto</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Valor Final</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Pagamento</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @vendas&.each do |venda| %>
          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4 text-sm font-medium text-tags-black">#<%= venda.id.to_s.rjust(5, '0') %></td>
            <td class="px-6 py-4 text-sm text-tags-gray"><%= venda.cliente&.nome || 'Cliente Avulso' %></td>
            <td class="px-6 py-4 text-sm text-tags-gray"><%= venda.usuario&.email %></td>
            <td class="px-6 py-4 text-sm text-tags-gray"><%= venda.created_at.strftime('%d/%m/%Y %H:%M') %></td>
            <td class="px-6 py-4 text-sm text-tags-gray">R$ <%= number_to_currency(venda.valor_total, unit: '', delimiter: '.', separator: ',') %></td>
            <td class="px-6 py-4 text-sm text-tags-gray">R$ <%= number_to_currency(venda.desconto || 0, unit: '', delimiter: '.', separator: ',') %></td>
            <td class="px-6 py-4 text-sm font-medium text-tags-black">R$ <%= number_to_currency(venda.valor_final, unit: '', delimiter: '.', separator: ',') %></td>
            <td class="px-6 py-4">
              <span class="px-3 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                <%= venda.forma_pagamento&.capitalize %>
              </span>
            </td>
            <td class="px-6 py-4">
              <div class="flex items-center gap-2">
                <button onclick="verDetalhes(<%= venda.id %>)" class="p-2 text-blue-600 hover:bg-blue-50 rounded transition">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                </button>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  function verDetalhes(id) {
    window.location.href = `/vendas/${id}`;
  }
</script>
