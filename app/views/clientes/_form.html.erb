<%= form_with model: @cliente, class: "max-w-4xl mx-auto" do |form| %>
  <% if @cliente.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <h4 class="text-red-800 font-medium mb-2">
        <%= pluralize(@cliente.errors.count, "erro") %> impediram este cliente de ser salvo:
      </h4>
      <ul class="text-red-700 list-disc list-inside">
        <% @cliente.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-4">
      <h5 class="text-lg font-medium text-gray-900 border-b pb-2">Dados Pessoais</h5>
      
      <div>
        <%= form.label :cli_nome, "Nome completo", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :cli_nome, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true %>
      </div>

      <div>
        <%= form.label :cli_email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.email_field :cli_email, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <%= form.label :cli_cpf, "CPF", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :cli_cpf, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true %>
      </div>

      <div>
        <%= form.label :cli_data_nasc, "Data de Nascimento", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.date_field :cli_data_nasc, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true %>
      </div>
    </div>

    <div class="space-y-4">
      <h5 class="text-lg font-medium text-gray-900 border-b pb-2">Contato</h5>
      
      <div>
        <%= form.label :cli_telefone1, "Telefone Principal", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :cli_telefone1, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true %>
      </div>

      <div>
        <%= form.label :cli_telefone2, "Telefone Alternativo", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :cli_telefone2, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <%= form.label :cli_endereco, "Endereço", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :cli_endereco, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", rows: 3, required: true %>
      </div>

      <div>
        <%= form.label :cli_observacao, "Observações", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :cli_observacao, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", rows: 3 %>
      </div>
    </div>
  </div>

  <div>
      <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :status, 
          [['Ativo', 'ativo'], ['Inativo', 'inativo']], 
          {}, 
          class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

  <div class="mt-8 flex gap-3">
    <%= form.submit "Salvar Cliente", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors duration-200 cursor-pointer" %>
    <%= link_to "Cancelar", clientes_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-6 rounded-lg transition-colors duration-200" %>
  </div>
<% end %>