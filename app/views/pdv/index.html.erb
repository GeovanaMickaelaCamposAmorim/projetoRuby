<% content_for :page_title, "Ponto de Venda (PDV)" %>
<% content_for :page_description, "Registre novas vendas de forma rápida e prática" %>

<div data-controller="pdv" class="h-full flex flex-col">
  <!-- Header Fixo -->
  <div class="p-4 flex-shrink-0">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="bg-[#ed215e] p-2 rounded-lg">
          <%= heroicon "currency-dollar", variant: :solid, options: { class: "h-6 w-6", style: "color: white" } %>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Ponto de Venda (PDV)</h1>
          <p class="text-gray-600">Registre novas vendas</p>
        </div>
      </div>
      <div class="text-right">
        <div class="text-sm text-gray-500">Vendedor</div>
        <div class="font-medium"><%= current_user.usu_email %></div>
      </div>
    </div>
  </div>

  <!-- Conteúdo Principal -->
  <div class="flex-1 flex mt-2 overflow-hidden">
    <!-- Coluna 1: Busca e Itens (Scrollável) -->
    <div class="flex-1 flex flex-col overflow-hidden">
      <div class="px-6 pb-0">
        <!-- Busca de Produto -->
        <div class="bg-white rounded-lg p-4 shadow">
          <div class="relative">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <input 
              type="text" 
              data-pdv-target="buscaInput"
              data-action="keypress->pdv#buscarProdutoEnter"
              placeholder="Digite o código ou nome do produto e pressione Enter..."
              class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ed215e]"
            >
          </div>
        </div>
      </div>

      <!-- Lista de Itens (Scrollável) -->
      <div class="flex-1 p-6 pt-4 overflow-y-auto">
        <div class="bg-white rounded-lg shadow h-full flex flex-col">
          <div class="border-b border-gray-200 px-6 py-4 flex-shrink-0">
            <h3 class="text-lg font-semibold">Itens da Venda</h3>
          </div>
          <div data-pdv-target="listaItens" class="flex-1 overflow-y-auto divide-y divide-gray-200">
            <div class="px-6 py-8 text-center text-gray-500" data-pdv-target="listaVazia">
              Nenhum item adicionado. Busque por produtos acima.
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Coluna 2: Resumo  -->
    <div class="w-96 border-l flex-shrink-0 "> 
      
      <!-- Resumo da Venda -->
      <div class="bg-white rounded-xl shadow-lg border border-gray-100"> 
        
        <!-- Cabeçalho -->
        <div class="p-6 pb-4 border-b border-gray-100">
          <h3 class="text-lg font-semibold text-gray-900">Resumo da Venda</h3>
        </div>
        
        <!-- Conteúdo Principal -->
        <div class="p-6 space-y-6">
          
          <!-- Valores -->
          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Subtotal:</span>
              <span data-pdv-target="subtotal" class="font-semibold text-gray-900">R$ 0,00</span>
            </div>
            
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Desconto:</span>
              <div class="flex items-center gap-2">
                <input 
                  type="number" 
                  data-pdv-target="descontoInput"
                  data-action="input->pdv#atualizarResumo"
                  value="0" 
                  min="0"
                  class="w-20 border border-gray-300 rounded-lg px-2 py-1 text-right focus:outline-none focus:ring-2 focus:ring-[#ed215e]"
                >
                <span class="text-gray-500">R$</span>
              </div>
            </div>
            
            <!-- Total em Destaque -->
            <div class="border-t border-gray-200 pt-4">
              <div class="flex justify-between items-center">
                <span class="text-lg font-bold text-gray-900">Total:</span>
                <span data-pdv-target="total" class="text-2xl font-bold text-[#ed215e]">R$ 0,00</span> <!-- Texto maior e cor rosa -->
              </div>
            </div>
          </div>

          <!-- Cliente -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Cliente (opcional)</label>
            <%= select_tag :cliente_id, 
              options_from_collection_for_select(@clientes, :id, :cli_nome, { include_blank: "Cliente Avulso" }), 
              class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#ed215e] bg-white" %>
          </div>

          <!-- Forma de Pagamento -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Forma de Pagamento</label>
            <%= select_tag :forma_pagamento, 
                          options_for_select(["PIX", "Cartão Crédito", "Cartão Débito", "Dinheiro", "Crediário"]), 
                          class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#ed215e] bg-white" %>
          </div>

          <!-- Botão Finalizar - Agora mais para cima -->
          <button 
            data-pdv-target="finalizarBtn"
            data-action="click->pdv#finalizarVenda"
            class="w-full bg-[#ed215e] text-white py-4 rounded-xl font-bold hover:bg-[#d91956] transition-colors disabled:opacity-50 disabled:cursor-not-allowed shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all"
            disabled
          >
            Finalizar Venda
          </button>

        </div>
      </div>
    </div>
  </div>
</div>