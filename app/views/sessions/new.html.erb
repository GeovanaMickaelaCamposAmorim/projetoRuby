<div style="background-color: #545454;" class="min-h-screen  flex items-center justify-center p-4">

  <div class="max-w-6xl w-full bg-white rounded-none rounded-r-2xl overflow-hidden">
    <div class="grid grid-cols-1 lg:grid-cols-2">

      <!-- Logo/Emoji Section - Left -->
      <div style="background-color: #545454;" class="p-2 flex flex-col justify-center items-center">
         <div class="text-center">
            <%= image_tag "tags_logo.png", alt: "Tags Logo", 
                  style: "width: 600px; height: auto; object-fit: contain;", 
                  class: "" %>
          </div>
  
      </div>

      <!-- Login Form - Right -->
      <div class="p-12 flex flex-col justify-center">
        <div class="max-w-md w-full mx-auto">
          <!-- Flash Messages -->
          <% if alert = flash[:alert] %>
            <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl flex items-center space-x-3">
              <div class="w-6 h-6 bg-red-100 rounded-full flex items-center justify-center">
                <span class="text-red-500 text-sm">!</span>
              </div>
              <p class="text-red-700 font-medium" id="alert"><%= alert %></p>
            </div>
          <% end %>

          <% if notice = flash[:notice] %>
            <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-xl flex items-center space-x-3">
              <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                <span class="text-green-500 text-sm">âœ“</span>
              </div>
              <p class="text-green-700 font-medium" id="notice"><%= notice %></p>
            </div>
          <% end %>

          <!-- Header -->
          <div class="text-center lg:text-left mb-8">
            <h2 class="text-3xl font-bold text-gray-900">Bem-vindo de volta</h2>
            <p class="text-gray-600 mt-2">FaÃ§a login para continuar</p>
          </div>

          <!-- Form -->
          <%= form_with url: session_path, class: "space-y-6" do |form| %>

            <div>
              <%= form.label :usu_email, "E-mail:", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <div class="relative">
                <%= form.email_field :usu_email, 
                  required: true, 
                  autofocus: true, 
                  autocomplete: "username", 
                  placeholder: "Insira seu e-mail", 
                  value: params[:usu_email], 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 placeholder-gray-400" %>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                  <span class="text-gray-400">ðŸ“§</span>
                </div>
              </div>
            </div>

            <div>
              <%= form.label :password, "Senha:", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <div class="relative">
                <%= form.password_field :password, 
                  required: true, 
                  autocomplete: "current-password", 
                  placeholder: "Insira sua senha", 
                  maxlength: 72, 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 placeholder-gray-400" %>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                  <span class="text-gray-400">ðŸ”’</span>
                </div>
              </div>
            </div>

            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <%= form.check_box :remember_me, class: "w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
                <%= form.label :remember_me, "Lembrar-me", class: "ml-2 block text-sm text-gray-700" %>
              </div>

              <%= link_to "Esqueceu a senha?", new_password_path, class: "text-sm text-blue-600 hover:text-blue-500 transition-colors duration-200" %>
            </div>

            <div>
              <%= form.submit "Entrar", 
                style: "background-color: #ed217c;", 
                class: "w-full hover:bg-[#d41a6c] text-white font-medium py-3 px-4 rounded-lg transition-all duration-200 transform hover:scale-[1.02] focus:ring-2 focus:ring-pink-500 focus:ring-offset-2 cursor-pointer" %>
            </div>
          <% end %>

          <!-- Footer -->
          <div class="mt-8 text-center">
            <p class="text-gray-600 text-sm">
              NÃ£o tem uma conta? <%= link_to "Entre em contato com o administrador", "#", class: "text-blue-600 hover:text-blue-500 font-medium transition-colors duration-200" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</div>
