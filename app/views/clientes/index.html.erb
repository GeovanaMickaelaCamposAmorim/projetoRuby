<script>
// ================================
// FUN√á√ïES GLOBAIS DE MODAL - GARANTIR QUE EXISTEM
// ================================

// Fun√ß√£o para abrir qualquer modal
function abrirModal(modalId) {
  console.log('üéØ Abrindo modal:', modalId);
  const modal = document.getElementById(modalId);
  if (modal) {
    modal.showModal();
    modal.classList.add('modal-open');
    
    // Adicionar evento para fechar com ESC
    modal.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        fecharModal(modalId);
      }
    });
    
    // Adicionar backdrop click
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        fecharModal(modalId);
      }
    });
  } else {
    console.error('‚ùå Modal n√£o encontrado:', modalId);
  }
}

// Fun√ß√£o para fechar qualquer modal
function fecharModal(modalId) {
  console.log('üéØ Fechando modal:', modalId);
  const modal = document.getElementById(modalId);
  if (modal) {
    modal.close();
    modal.classList.remove('modal-open');
  }
}

// Fechar modal com Cancelar (fun√ß√£o global)
function cancelarModal() {
  console.log('üéØ Cancelando modal...');
  const modals = document.querySelectorAll('dialog[open]');
  modals.forEach(modal => {
    modal.close();
    modal.classList.remove('modal-open');
  });
}

// Tornar fun√ß√µes globais
window.abrirModal = abrirModal;
window.fecharModal = fecharModal;
window.cancelarModal = cancelarModal;

console.log('‚úÖ Fun√ß√µes globais de modal definidas!');
</script>

<script>
// ================================
// SISTEMA DE CLIENTES - MESMO PADR√ÉO DOS FUNCION√ÅRIOS
// ================================

// Fun√ß√£o para abrir modal de clientes
async function abrirClienteModal(url) {
  try {
    console.log('üîç Abrindo modal de cliente para:', url);
    
    // Mostrar loading
    document.getElementById('clienteFormContent').innerHTML = `
      <div class="flex justify-center items-center py-8">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-tags-rosa"></div>
        <span class="ml-2 text-gray-600">Carregando...</span>
      </div>
    `;

    // Abrir modal
    abrirModal('clienteModal');

    // Buscar o conte√∫do
    const response = await fetch(url, {
      headers: {
        'X-Requested-With': 'XMLHttpRequest'
      }
    });
    
    if (!response.ok) {
      throw new Error(`Erro HTTP: ${response.status}`);
    }
    
    const html = await response.text();
    
    // Inserir o conte√∫do diretamente
    document.getElementById('clienteFormContent').innerHTML = html;
    
    // Atualizar o t√≠tulo do modal
    const modalTitle = document.getElementById('clienteModalTitle');
    if (modalTitle) {
      if (url.includes('new')) {
        modalTitle.textContent = 'Novo Cliente';
      } else if (url.includes('edit')) {
        modalTitle.textContent = 'Editar Cliente';
      } else {
        modalTitle.textContent = 'Visualizar Cliente';
      }
    }
    
    console.log('‚úÖ Modal de cliente carregado com sucesso!');
    
    // CONFIGURAR O SUBMIT DO FORMUL√ÅRIO - AGORA FUNCIONANDO!
    setupClienteFormSubmit();
    
  } catch (error) {
    console.error('Erro ao abrir modal de cliente:', error);
    document.getElementById('clienteFormContent').innerHTML = `
      <div class="text-center py-8 text-red-600">
        <p class="font-medium">Erro ao carregar</p>
        <p class="text-sm text-gray-500 mt-2">${error.message}</p>
      </div>
    `;
  }
}

// CONFIGURAR SUBMIT DO FORMUL√ÅRIO - FUN√á√ÉO NOVA
function setupClienteFormSubmit() {
  const form = document.getElementById('cliente-form');
  if (form) {
    console.log('üéØ Configurando submit do formul√°rio cliente...');
    
    // Remover event listeners antigos
    form.removeEventListener('submit', handleClienteSubmit);
    
    // Adicionar novo event listener
    form.addEventListener('submit', handleClienteSubmit);
    
    console.log('‚úÖ Submit do formul√°rio configurado!');
  } else {
    console.log('‚è±Ô∏è Formul√°rio n√£o encontrado ainda, tentando novamente...');
    setTimeout(setupClienteFormSubmit, 100);
  }
}

// FUN√á√ÉO PRINCIPAL DE SUBMIT - CORRIGIDA
async function handleClienteSubmit(event) {
  console.log('üöÄ SUBMIT INTERCEPTADO - Impedindo comportamento padr√£o!');
  event.preventDefault();
  
  const form = event.target;
  const formData = new FormData(form);
  
  console.log('üì§ Enviando via fetch para:', form.action);
  
  try {
    const response = await fetch(form.action, {
      method: form.method,
      body: formData,
      headers: {
        'X-Requested-With': 'XMLHttpRequest',
        'Accept': 'text/html'
      }
    });
    
    console.log('üì• Resposta recebida. Status:', response.status);
    
    if (response.ok) {
      // SUCESSO
      console.log('‚úÖ Cliente salvo com sucesso!');
      fecharModal('clienteModal');
      window.location.reload();
    } else {
      // ERRO - MOSTRAR NO MODAL
      console.log('‚ö†Ô∏è Erros de valida√ß√£o - mostrando no modal');
      const html = await response.text();
      document.getElementById('clienteFormContent').innerHTML = html;
      
      // RECONFIGURAR O SUBMIT PARA O NOVO FORMUL√ÅRIO
      setTimeout(setupClienteFormSubmit, 100);
    }
  } catch (error) {
    console.error('‚ùå Erro na requisi√ß√£o:', error);
    alert('Erro ao salvar cliente: ' + error.message);
  }
}

// Inicializar quando a p√°gina carregar
document.addEventListener('DOMContentLoaded', function() {
  console.log('üöÄ Sistema de clientes carregado');
  setupClienteFormSubmit();
});

</script>

