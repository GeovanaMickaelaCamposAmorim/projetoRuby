<% content_for :page_title, "Ponto de Venda (PDV)" %>
<% content_for :page_description, "Registre novas vendas de forma rápida e prática" %>
<% content_for :page_icon do %>
  <span class="material-symbols-outlined text-xl">point_of_sale</span>
<% end %>

<div data-controller="pdv" class="h-full flex flex-col">

  <!-- Conteúdo Principal -->
  <div class="flex-1 flex overflow-hidden gap-2">
    <!-- Coluna 1: Busca e Itens (Scrollável) -->
    <div class="flex-1 flex flex-col overflow-hidden">
      <div class="">
        <!-- Busca de Produto -->
        <div class="bg-white rounded-lg p-4 shadow">
          <div class="relative">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <input 
              type="text" 
              id="busca-produto"
              placeholder="Digite o código ou nome do produto..."
              class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ed215e]"
            >
            <div id="sugestoes-produtos" class="absolute z-50 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg hidden max-h-60 overflow-y-auto">
              <!-- Sugestões aparecerão aqui via JavaScript -->
            </div>
          </div>
        </div>
      </div>

      <!-- Lista de Itens (Scrollável) -->
      <div class="flex-1 pt-4  overflow-y-auto">
        <div class="bg-white rounded-lg shadow h-full flex flex-col">
          <div class="border-b border-gray-200 px-6 py-4 flex-shrink-0">
            <h3 class="text-lg font-semibold">Itens da Venda</h3>
          </div>
          <div id="lista-itens" class="flex-1 overflow-y-auto divide-y divide-gray-200">
            <div id="lista-vazia" class="px-6 py-8 text-center text-gray-500">
              Nenhum item adicionado. Busque por produtos acima.
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Coluna 2: Resumo  -->
    <div class="w-96 flex-shrink-0 "> 
      <!-- Resumo da Venda -->
      <div class="bg-white rounded-xl shadow-lg border border-gray-100"> 
        <!-- Cabeçalho -->
        <div class="p-6 pb-4 border-b border-gray-100">
          <h3 class="text-lg font-semibold text-gray-900">Resumo da Venda</h3>
        </div>
        
        <!-- Conteúdo Principal -->
        <div class="p-6 space-y-6">
          <!-- Valores -->
          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Subtotal:</span>
              <span id="subtotal" class="font-semibold text-gray-900">R$ 0,00</span>
            </div>
            
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Desconto:</span>
              <div class="flex items-center gap-2">
                <input 
                  type="number" 
                  id="desconto-input"
                  value="0" 
                  min="0"
                  class="w-20 border border-gray-300 rounded-lg px-2 py-1 text-right focus:outline-none focus:ring-2 focus:ring-[#ed215e]"
                >
                <span class="text-gray-500">R$</span>
              </div>
            </div>
            
            <!-- Total em Destaque -->
            <div class="border-t border-gray-200 pt-4">
              <div class="flex justify-between items-center">
                <span class="text-lg font-bold text-gray-900">Total:</span>
                <span id="total" class="text-2xl font-bold text-tags-rosa">R$ 0,00</span>
              </div>
            </div>
          </div>

          <!-- Forma de Pagamento -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Forma de Pagamento</label>
            <%= select_tag :forma_pagamento, 
                          options_for_select(["PIX", "Cartão Crédito", "Cartão Débito", "Dinheiro", "Crediário"]), 
                          class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#ed215e] bg-white" %>
          </div>

          <!-- Cliente -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Cliente (opcional)</label>
            <%= select_tag :cliente_id, 
              options_from_collection_for_select(@clientes, :id, :cli_nome, { include_blank: "Cliente Avulso" }), 
              { include_blank: true, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#ed215e] bg-white" } %>
          </div>

          

          <!-- Botão Finalizar -->
          <button 
            id="finalizar-btn"
            onclick="window.pdvController.finalizarVenda()"
            class="w-full bg-tags-rosa text-white py-4 rounded-xl font-bold hover:bg-tags-rosa-dark transition-colors disabled:opacity-50 disabled:cursor-not-allowed shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all"
            disabled
          >
            Finalizar Venda
          </button>
        </div>
      </div>
    </div>
  </div>
</div>