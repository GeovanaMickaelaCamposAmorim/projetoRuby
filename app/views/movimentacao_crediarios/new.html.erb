<h2 class="text-xl font-semibold mb-4">Nova Movimentação</h2>

<%= form_with model: [@ficha, @mov], local: true, class: "space-y-4" do |f| %>

  <div>
    <%= f.label :mov_tipo, "Tipo" %>
    <%= f.select :mov_tipo, MovimentacaoCrediario.mov_tipos.keys.map { |t| [t.humanize, t] },
                 class: "border p-2 rounded w-full" %>
  </div>

  <div>
    <%= f.label :mov_valor, "Valor" %>
    <%= f.number_field :mov_valor, step: 0.01, class: "border p-2 rounded w-full" %>
  </div>

  <div>
    <%= f.label :mov_observacao, "Observação" %>
    <%= f.text_area :mov_observacao, class: "border p-2 rounded w-full" %>
  </div>

  <%= f.submit "Salvar", class: "bg-tags-rosa text-white px-4 py-2 rounded" %>

<% end %>
