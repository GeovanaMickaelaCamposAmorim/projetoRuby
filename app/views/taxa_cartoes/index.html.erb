<% content_for :page_title, "Taxas de Cart√£o" %>
<% content_for :page_description, "Gerencie as taxas de cart√£o da sua empresa" %>
<% content_for :page_icon do %>
  <span class="material-symbols-outlined text-xs">credit_card</span>
<% end %>

<div class="container mx-auto">
  <div class="mb-2">
    <div class="flex justify-end items-center">
      <!-- Bot√£o Nova Taxa - Agora com modal -->
      <button onclick="abrirTaxaCartaoModal('/taxa_cartoes/new')" 
              class="px-6 py-3 bg-tags-rosa text-white rounded-lg font-medium hover:bg-tags-rosa-dark transition-colors duration-200 flex items-center gap-2 cursor-pointer">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Nova Taxa
      </button>
    </div>
  </div>

  <hr class="border-t border-gray-300 my-4">

  <% if @taxa_cartoes.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Descri√ß√£o</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Porcentagem</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">A√ß√µes</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @taxa_cartoes.each do |taxa_cartao| %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="font-medium text-gray-900"><%= taxa_cartao.tipo_formatado %></div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-600"><%= taxa_cartao.txc_descricao.presence || '-' %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-600"><%= taxa_cartao.porcentagem_formatada %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <div class="flex justify-center space-x-2">
                    <!-- Bot√£o Editar - Agora com modal -->
                    <button onclick="abrirTaxaCartaoModal('/taxa_cartoes/<%= taxa_cartao.id %>/edit')" 
                            class="text-blue-600 hover:text-blue-900 font-medium text-sm px-3 py-1 border border-blue-600 rounded hover:bg-blue-50 transition-colors duration-200 cursor-pointer">
                      Editar
                    </button>
                    
                    <!-- Bot√£o Excluir -->
                    <%= link_to taxa_cartoes_path(taxa_cartao), 
                                method: :delete, 
                                data: { confirm: 'Tem certeza que deseja excluir esta taxa?' },
                                class: "text-red-600 hover:text-red-900 font-medium text-sm px-3 py-1 border border-red-600 rounded hover:bg-red-50 transition-colors duration-200" do %>
                      Excluir
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-8 text-center">
      <div class="max-w-md mx-auto">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhuma taxa cadastrada</h3>
        <p class="text-gray-500 mb-4">Comece cadastrando a primeira taxa de cart√£o.</p>
        <button onclick="abrirTaxaCartaoModal('/taxa_cartoes/new')" 
                class="px-6 py-2 bg-[#ed215e] text-white rounded-lg font-medium hover:bg-[#d91956] transition-colors duration-200 inline-flex items-center gap-2 cursor-pointer">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Nova Taxa
        </button>
      </div>
    </div>
  <% end %>
</div>

