<script>
document.addEventListener('DOMContentLoaded', function() {
  // Função para toggle de submenu
  function toggleSubmenu(button) {
    const submenuId = button.getAttribute('data-submenu') + '-submenu';
    const arrowId = button.getAttribute('data-submenu') + '-arrow';
    
    const submenu = document.getElementById(submenuId);
    const arrow = document.getElementById(arrowId);
    
    if (submenu.classList.contains('hidden')) {
      submenu.classList.remove('hidden');
      arrow.classList.add('rotate-180');
    } else {
      submenu.classList.add('hidden');
      arrow.classList.remove('rotate-180');
    }
  }
  
  // Adiciona event listeners para todos os botões de submenu
  const submenuButtons = document.querySelectorAll('[data-submenu]');
  submenuButtons.forEach(button => {
    button.addEventListener('click', (e) => {
      e.preventDefault();
      toggleSubmenu(button);
    });
  });
});
</script>

