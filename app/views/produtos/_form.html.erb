<%= form_with model: produto, class: "max-w-4xl mx-auto bg-white p-6 rounded-lg shadow" do |form| %>
  <% if produto.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <h4 class="text-red-800 font-medium mb-2">
        <%= pluralize(produto.errors.count, "erro") %> impediram este produto de ser salvo:
      </h4>
      <ul class="text-red-700 list-disc list-inside">
        <% produto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Coluna 1: Informações Básicas -->
    <div class="space-y-4">
      <h3 class="text-lg font-medium text-gray-900 border-b pb-2">Informações Básicas</h3>
      
      <div>
        <%= form.label :pro_nome, "Nome do Produto", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :pro_nome, 
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", 
              placeholder: "Ex: Camiseta Básica",
              required: true %>
      </div>

      <div>
        <%= form.label :pro_descricao, "Descrição", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :pro_descricao, 
              rows: 3,
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", 
              placeholder: "Descrição do produto" %>
      </div>

      <div>
        <%= form.label :pro_codigo, "Código do Produto", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :pro_codigo, 
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", 
              placeholder: "Código único do produto" %>
      </div>

      <div>
        <%= form.label :pro_cor, "Cor", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :pro_cor, 
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", 
              placeholder: "Ex: Preto, Branco, Azul" %>
      </div>
    </div>

    <!-- Coluna 2: Categorização e Valores -->
    <div class="space-y-4">
      <h3 class="text-lg font-medium text-gray-900 border-b pb-2">Categorização</h3>
      
      <div>
        <%= form.label :tipo_id, "Tipo", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :tipo_id, 
              options_for_select(@tipos.map { |t| [t.tip_nome, t.id] }, produto.tipo_id),
              { prompt: "Selecione o tipo" },
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              required: true %>
      </div>

      <div>
        <%= form.label :marca_id, "Marca", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :marca_id, 
              options_for_select(@marcas.map { |m| [m.nome, m.id] }, produto.marca_id),
              { prompt: "Selecione a marca" },
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              required: true %>
      </div>

      <div>
        <%= form.label :tamanho_id, "Tamanho", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :tamanho_id, 
              options_for_select(@tamanhos.map { |t| [t.tam_nome, t.id] }, produto.tamanho_id),
              { prompt: "Selecione o tamanho" },
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              required: true %>
      </div>
    </div>
  </div>

  <!-- Valores e Estoque -->
  <div class="mt-6 pt-6 border-t border-gray-200">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Valores e Estoque</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <%= form.label :pro_valor_custo, "Valor de Custo", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :pro_valor_custo, 
              step: 0.01,
              min: 0,
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", 
              placeholder: "0,00" %>
      </div>

      <div>
        <%= form.label :pro_valor_venda, "Valor de Venda", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :pro_valor_venda, 
              step: 0.01,
              min: 0.01,
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", 
              placeholder: "0,00",
              required: true %>
      </div>

      <div>
        <%= form.label :pro_quantidade, "Quantidade em Estoque", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :pro_quantidade, 
              min: 0,
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", 
              placeholder: "0",
              required: true %>
      </div>
    </div>

    <div class="mt-4">
      <%= form.label :pro_estoque_minimo, "Estoque Mínimo", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :pro_estoque_minimo, 
            min: 0,
            class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", 
            placeholder: "Quantidade mínima para alerta" %>
    </div>
  </div>

  <!-- Status -->
  <div class="mt-6 pt-6 border-t border-gray-200">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Status</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= form.label :pro_status, "Status do Produto", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :pro_status, 
              options_for_select([
                ['Ativo', 'ativo'],
                ['Inativo', 'inativo']
              ], produto.pro_status || 'ativo'),
              {},
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <%= form.label :pro_status_estoque, "Status do Estoque", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :pro_status_estoque, 
              options_for_select([
                ['Disponível', 'disponivel'],
                ['Esgotado', 'esgotado'],
                ['Sob Encomenda', 'sob_encomenda']
              ], produto.pro_status_estoque || 'disponivel'),
              {},
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
    </div>
  </div>

  <!-- Botões -->
  <div class="mt-8 flex gap-3">
    <%= form.submit produto.persisted? ? "Atualizar Produto" : "Salvar Produto", 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors duration-200 cursor-pointer" %>
    <%= link_to "Cancelar", produtos_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-6 rounded-lg transition-colors duration-200" %>
  </div>
<% end %>