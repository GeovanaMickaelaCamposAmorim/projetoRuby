<% content_for :page_title, "Controle de Produtos" %>
<% content_for :page_description, "Gerencie e monitore o estoque de produtos da sua loja" %>
<% content_for :page_icon do %>
  <span class="material-symbols-outlined text-xs">shelves</span>
<% end %>

<div class="container mx-auto">
  <div class="mb-2">
    <div class="flex justify-end items-center">
      <!-- Bot√£o Novo Produto - Agora com modal -->
      <button onclick="abrirProdutoModal('<%= new_produto_path %>')" 
              class="px-6 py-3 bg-tags-rosa text-white rounded-lg font-medium hover:bg-tags-rosa-dark transition-colors duration-200 flex items-center gap-2 cursor-pointer">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Novo Produto
      </button>
    </div>
  </div>

  <hr class="border-t border-gray-300 my-4">

  <!-- Filtros -->
<div class="bg-white rounded-lg p-6 mb-6">
  <%= form_with url: produtos_path, method: :get, local: true, class: "space-y-4" do %>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div>
        <%= text_field_tag :search, params[:search], 
              placeholder: "Buscar produto...",
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#ed215e] focus:border-transparent" %>
      </div>
      
      <div>
        <%= select_tag :tipo_id, 
              options_for_select([['Todos os tipos', '']] + @tipos.map { |t| [t.tip_nome, t.id] }, params[:tipo_id]),
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#ed215e] focus:border-transparent" %>
      </div>
      
      <div>
        <%= select_tag :marca_id, 
              options_for_select([['Todas as marcas', '']] + @marcas.map { |m| [m.nome, m.id] }, params[:marca_id]),
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#ed215e] focus:border-transparent" %>
      </div>
      
      <div>
        <%= select_tag :estoque, 
              options_for_select([
                ['Todos os produtos', ''],
                ['Dispon√≠vel', 'disponivel'],
                ['Esgotado', 'esgotado'],
                ['Baixo Estoque', 'baixo_estoque']
              ], params[:estoque]),
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#ed215e] focus:border-transparent" %>
      </div>
    </div>
    
    <div class="flex justify-between items-center">
      <div class="text-sm text-gray-500">
        <%= @produtos.size %> produto(s) encontrado(s)
      </div>
      
      <div class="flex gap-2">
        <%= submit_tag "Filtrar", class: "px-4 py-2 bg-tags-branco text-tags-cinza border border-tags-cinza rounded-lg font-medium cursor-pointer hover:bg-tags-branco/90 transition-colors duration-200" %>
        <%= link_to "Limpar", produtos_path, class: "px-4 py-2 bg-tags-cinza text-tags-branco rounded-lg font-medium hover:bg-tags-cinza/90 transition-colors duration-200" %>
      </div>
    </div>
  <% end %>
</div>

  <% if @produtos.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full divide-y divide-gray-200 text-sm">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">C√≥digo</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider min-w-[180px]">Produto</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap hidden lg:table-cell">Tipo</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap hidden xl:table-cell">Marca</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap hidden 2xl:table-cell">Tam.</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap hidden 2xl:table-cell">Cor</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">Estoque</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">Valor</th>
              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap hidden md:table-cell">Status</th>
              <th class="px-3 py-2 text-center text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">A√ß√µes</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @produtos.each do |produto| %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-3 py-3 whitespace-nowrap font-medium text-gray-900">
                  <span class="font-mono text-xs"><%= produto.pro_codigo %></span>
                </td>
                <td class="px-3 py-3">
                  <div class="flex items-center gap-1">
                    <div class="min-w-0 flex-1">
                      <p class="text-sm font-medium text-gray-900 truncate" title="<%= produto.pro_nome %>">
                        <%= produto.pro_nome %>
                      </p>
                      <div class="flex flex-wrap gap-1 mt-0.5">
                        <span class="text-xs text-gray-500 lg:hidden"><%= produto.tipo&.tip_nome %></span>
                        <span class="text-xs text-gray-500 xl:hidden"><%= produto.marca&.nome %></span>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-3 py-3 whitespace-nowrap text-gray-900 hidden lg:table-cell">
                  <span class="text-xs"><%= produto.tipo&.tip_nome %></span>
                </td>
                <td class="px-3 py-3 whitespace-nowrap text-gray-900 hidden xl:table-cell">
                  <span class="text-xs"><%= produto.marca&.nome %></span>
                </td>
                <td class="px-3 py-3 whitespace-nowrap text-gray-900 hidden 2xl:table-cell">
                  <span class="text-xs"><%= produto.tamanho&.tam_nome %></span>
                </td>
                <td class="px-3 py-3 whitespace-nowrap text-gray-900 hidden 2xl:table-cell">
                  <div class="flex items-center gap-1" title="<%= produto.pro_cor %>">
                    <div class="w-2 h-2 rounded-full border border-gray-300" style="background-color: <%= produto.pro_cor.present? ? produto.pro_cor : '#ccc' %>"></div>
                    <span class="text-xs truncate max-w-[60px]"><%= produto.pro_cor %></span>
                  </div>
                </td>
                <td class="px-3 py-3 whitespace-nowrap font-medium">
                  <span class="text-xs <%= produto.pro_quantidade > 0 ? 'text-green-600' : 'text-red-600' %>">
                    <%= produto.pro_quantidade %>
                  </span>
                </td>
                <td class="px-3 py-3 whitespace-nowrap font-medium text-gray-900">
                  <span class="text-xs"><%= number_to_currency(produto.pro_valor_venda, unit: "R$ ", separator: ",", delimiter: ".") %></span>
                </td>
                <td class="px-3 py-3 whitespace-nowrap hidden md:table-cell">
                  <% if produto.pro_quantidade <= 0 %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                     Esgotado
                    </span>
                  <% elsif produto.pro_estoque_minimo && produto.pro_quantidade <= produto.pro_estoque_minimo %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      Baixo Estoque
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Dispon√≠vel
                    </span>
                  <% end %>
                </td>
                <td class="px-3 py-3 whitespace-nowrap text-center">
                  <div class="flex justify-center space-x-1">
                    <!-- Bot√£o Editar - Agora com modal -->
                    <button onclick="abrirProdutoModal('<%= edit_produto_path(produto) %>')" 
                            class="text-blue-600 hover:text-blue-900 text-xs px-2 py-1 border border-blue-600 rounded hover:bg-blue-50 transition-colors duration-200 cursor-pointer">
                      Editar
                    </button>
                    
                    <!-- Bot√£o Excluir -->
                    <%= link_to produto_path(produto), 
                          method: :delete, 
                          data: { confirm: 'Tem certeza?' },
                          class: "text-red-600 hover:text-red-900 text-xs px-2 py-1 border border-red-600 rounded hover:bg-red-50 transition-colors duration-200" do %>
                          Excluir
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% else %>
        <div class="bg-white rounded-lg shadow p-8 text-center">
          <div class="max-w-md mx-auto">
            <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhum produto cadastrado</h3>
            <p class="text-gray-500 mb-4">Comece cadastrando seus produtos no estoque.</p>
            <button onclick="abrirProdutoModal('<%= new_produto_path %>')" 
                    class="px-6 py-2 bg-[#ed215e] text-white rounded-lg font-medium hover:bg-[#d91956] transition-colors duration-200 inline-flex items-center gap-2 cursor-pointer">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Novo Produto
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Modal para Produtos -->
<dialog id="produtoModal" class="modal-base">
  <div class="modal-container">
    <!-- Header -->
    <div class="modal-header no-print">
      <h3 class="modal-title" id="produtoModalTitle">Carregando...</h3>
      <button type="button" onclick="fecharModal('produtoModal')" class="modal-close-btn" title="Fechar">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Content -->
    <div class="modal-content-container">
      <div id="produtoFormContent" class="modal-content">
        <div class="flex justify-center items-center py-8">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-tags-rosa"></div>
