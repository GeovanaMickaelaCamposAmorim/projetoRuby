    // Abrir modal
    abrirModal('userModal');

    // Buscar o conte√∫do
    const response = await fetch(url, {
      headers: {
        'X-Requested-With': 'XMLHttpRequest'
      }
    });
    
    if (!response.ok) {
      throw new Error(`Erro HTTP: ${response.status}`);
    }
    
    const html = await response.text();
    
    // Inserir o conte√∫do diretamente
    document.getElementById('userFormContent').innerHTML = html;
    
    // Atualizar o t√≠tulo do modal
    const modalTitle = document.getElementById('userModalTitle');
    if (modalTitle) {
      if (url.includes('new')) {
        modalTitle.textContent = 'Novo Funcion√°rio';
      } else if (url.includes('edit')) {
        modalTitle.textContent = 'Editar Funcion√°rio';
      } else {
        modalTitle.textContent = 'Visualizar Funcion√°rio';
      }
    }
    
    console.log('‚úÖ Modal carregado com sucesso!');
    
  } catch (error) {
    console.error('Erro ao abrir modal:', error);
