<div class="space-y-6">
  <!-- Header com avatar -->
  <div class="text-center">
    <div class="w-20 h-20 bg-gradient-to-br from-tags-rosa to-tags-rosa-dark rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
      <span class="text-white text-2xl font-bold">
        <%= @cliente.cli_nome&.first&.upcase || 'C' %>
      </span>
    </div>
    <h3 class="text-2xl font-bold text-gray-900"><%= @cliente.cli_nome %></h3>
    <p class="text-gray-500 mt-1">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @cliente.status == 'ativo' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
        <%= @cliente.status == 'ativo' ? '✅ Cliente Ativo' : '❌ Cliente Inativo' %>
      </span>
    </p>
  </div>

  <!-- Grid de informações -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Coluna 1: Dados Pessoais -->
    <div class="space-y-4">
      <div class="flex items-center gap-2 pb-3 border-b border-gray-200">
        <svg class="w-5 h-5 text-tags-rosa" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        <h4 class="text-lg font-semibold text-gray-900">Dados Pessoais</h4>
      </div>
      
      <div class="space-y-3">
        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">Nome Completo</label>
          <div class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-3 text-gray-900 font-medium">
            <%= @cliente.cli_nome %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">Email</label>
          <div class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-3 text-gray-900">
            <%= @cliente.cli_email.present? ? @cliente.cli_email : '<span class="text-gray-400">Não informado</span>'.html_safe %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">CPF</label>
          <div class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-3 text-gray-900">
            <%= @cliente.cli_cpf.present? ? @cliente.cli_cpf : '<span class="text-gray-400">Não informado</span>'.html_safe %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">Data de Nascimento</label>
          <div class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-3 text-gray-900">
            <%= @cliente.cli_data_nasc.present? ? l(@cliente.cli_data_nasc, format: :long) : '<span class="text-gray-400">Não informada</span>'.html_safe %>
          </div>
        </div>
      </div>
    </div>

    <!-- Coluna 2: Contato -->
    <div class="space-y-4">
      <div class="flex items-center gap-2 pb-3 border-b border-gray-200">
        <svg class="w-5 h-5 text-tags-rosa" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        <h4 class="text-lg font-semibold text-gray-900">Contato</h4>
      </div>
      
      <div class="space-y-3">
        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">Telefone Principal</label>
          <div class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-3 text-gray-900">
            <%= @cliente.cli_telefone1.present? ? @cliente.cli_telefone1 : '<span class="text-gray-400">Não informado</span>'.html_safe %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">Telefone Alternativo</label>
          <div class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-3 text-gray-900">
            <%= @cliente.cli_telefone2.present? ? @cliente.cli_telefone2 : '<span class="text-gray-400">Não informado</span>'.html_safe %>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-600 mb-1">Endereço</label>
          <div class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-3 text-gray-900">
            <%= @cliente.cli_endereco.present? ? @cliente.cli_endereco : '<span class="text-gray-400">Não informado</span>'.html_safe %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Observações -->
  <% if @cliente.cli_observacao.present? %>
    <div class="mt-6 pt-6 border-t border-gray-200">
      <div class="flex items-center gap-2 mb-4">
        <svg class="w-5 h-5 text-tags-rosa" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h4 class="text-lg font-semibold text-gray-900">Observações</h4>
      </div>
      <div class="bg-blue-50 border border-blue-200 rounded-lg px-4 py-3 text-gray-900">
        <%= simple_format(@cliente.cli_observacao) %>
      </div>
    </div>
  <% end %>

</div>