  display: flex;
  justify-content: flex-end;
  gap: 0.75rem;
  padding: 1rem 1.5rem;
  border-top: 1px solid #e5e7eb;
  background: white;
  position: sticky;
  bottom: 0;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translate(-50%, -48%) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}
</style>

<script>
// ================================
// FUN√á√ïES ESPEC√çFICAS PARA TAXA_CARTAO
// ================================

// Fun√ß√£o para abrir modal de taxa_cartao
async function abrirTaxaCartaoModal(url) {
  try {
    console.log('üîç Abrindo modal de taxa_cartao para:', url);
    
    // Mostrar loading
    document.getElementById('taxaCartaoFormContent').innerHTML = `
      <div class="flex justify-center items-center py-8">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-tags-rosa"></div>
        <span class="ml-2 text-gray-600">Carregando...</span>
      </div>
    `;

    // Abrir modal
    abrirModal('taxaCartaoModal');

    // Buscar o formul√°rio
    const response = await fetch(url);
    
    if (!response.ok) {
      throw new Error(`Erro HTTP: ${response.status}`);
    }
    
    const html = await response.text();
    
    // Extrair apenas o conte√∫do do formul√°rio
    const parser = new DOMParser();
    const doc = parser.parseFromString(html, 'text/html');
    
    const formContent = doc.querySelector('form');
    
    if (formContent) {
      document.getElementById('taxaCartaoFormContent').innerHTML = formContent.outerHTML;
      
      // Atualizar o t√≠tulo do modal
      const modalTitle = document.getElementById('taxaCartaoModalTitle');
      if (modalTitle) {
        const isNew = url.includes('new');
        modalTitle.textContent = isNew ? 'Nova Taxa de Cart√£o' : 'Editar Taxa de Cart√£o';
      }
    } else {
      console.error('Formul√°rio n√£o encontrado no HTML');
      document.getElementById('taxaCartaoFormContent').innerHTML = `
        <div class="text-center py-8">
          <div class="text-red-600 font-medium mb-4">Erro ao carregar formul√°rio</div>
        </div>
      `;
    }
    
  } catch (error) {
    console.error('Erro em abrirTaxaCartaoModal:', error);
    document.getElementById('taxaCartaoFormContent').innerHTML = `
      <div class="text-center py-8 text-red-600">
        <p class="font-medium">Erro ao carregar</p>
        <p class="text-sm text-gray-500 mt-2">${error.message}</p>
      </div>
    `;
  }
}

// Fun√ß√£o espec√≠fica para fechar modal de taxa_cartao
function fecharTaxaCartaoModal() {
  fecharModal('taxaCartaoModal');
}

// Fun√ß√£o para lidar com submit do formul√°rio de taxa_cartao
function handleTaxaCartaoSubmit(event) {
  event.preventDefault();
  console.log('üì§ Submetendo formul√°rio de taxa_cartao...');
  
  const form = event.target;
  const formData = new FormData(form);
  
  fetch(form.action, {
    method: form.method,
    body: formData,
    headers: {
      'X-Requested-With': 'XMLHttpRequest',
      'Accept': 'text/html'
    }
  })
  .then(response => {
    console.log('üì§ Response do submit:', response.status);
    if (response.ok) {
      // Fechar modal e recarregar a p√°gina
      fecharTaxaCartaoModal();
      window.location.reload();
    } else {
      // Mostrar erros de valida√ß√£o
      return response.text().then(html => {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        const errorForm = doc.querySelector('form');
        if (errorForm) {
          document.getElementById('taxaCartaoFormContent').innerHTML = errorForm.outerHTML;
        }
      });
    }
  })
  .catch(error => {
    console.error('Erro no submit:', error);
    alert('Erro ao salvar taxa de cart√£o');
  });
}

// Adicionar event listener para forms din√¢micos de taxa_cartao
document.addEventListener('submit', function(event) {
  if (event.target.closest('#taxaCartaoFormContent')) {
    handleTaxaCartaoSubmit(event);
  }
});

// ================================
// FUN√á√ïES GLOBAIS DE MODAL
// ================================

// Fun√ß√£o para abrir qualquer modal
function abrirModal(modalId) {
  console.log('üéØ Abrindo modal:', modalId);
  const modal = document.getElementById(modalId);
  if (modal) {
    modal.showModal();
    modal.classList.add('modal-open');
    
    // Adicionar evento para fechar com ESC
    modal.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        fecharModal(modalId);
      }
    });
    
    // Adicionar backdrop click
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        fecharModal(modalId);
      }
    });
  } else {
    console.error('‚ùå Modal n√£o encontrado:', modalId);
  }
}

// Fun√ß√£o para fechar qualquer modal
function fecharModal(modalId) {
  console.log('üéØ Fechando modal:', modalId);
  const modal = document.getElementById(modalId);
  if (modal) {
    modal.close();
    modal.classList.remove('modal-open');
  }
}

// Fechar modal com Cancelar (fun√ß√£o global)
function cancelarModal() {
  console.log('üéØ Cancelando modal...');
  const modals = document.querySelectorAll('dialog[open]');
  modals.forEach(modal => {
    modal.close();
    modal.classList.remove('modal-open');
  });
}

// Event Listeners para todos os modais <dialog>
document.addEventListener('DOMContentLoaded', function() {
  console.log('üöÄ Fun√ß√µes de modal carregadas!');
  
  document.querySelectorAll('dialog').forEach(modal => {
    modal.addEventListener('cancel', function() {
      this.close();
    });
    
    modal.addEventListener('click', function(event) {
      if (event.target === this) {
        this.close();
      }
    });
  });
});

// Tornar fun√ß√µes globais
window.abrirModal = abrirModal;
window.fecharModal = fecharModal;
window.cancelarModal = cancelarModal;
window.abrirTaxaCartaoModal = abrirTaxaCartaoModal;
window.fecharTaxaCartaoModal = fecharTaxaCartaoModal;

console.log('‚úÖ Todas as fun√ß√µes de modal definidas!');
</script>