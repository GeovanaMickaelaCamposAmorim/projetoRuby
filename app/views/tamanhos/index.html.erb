<% content_for :page_title, "Tamanhos" %>
<% content_for :page_description, "Gerencie os tamanhos dos produtos" %>
<% content_for :page_icon do %>
  <span class="material-symbols-outlined text-xs">checkroom</span>
<% end %>

<div class="container mx-auto">
  <div class="mb-2">
    <div class="flex justify-end items-center">
      <!-- Bot√£o Novo Tamanho - Agora com modal -->
      <button onclick="abrirTamanhoModal('<%= new_tamanho_path %>')" 
              class="px-6 py-3 bg-tags-rosa text-white rounded-lg font-medium hover:bg-tags-rosa-dark transition-colors duration-200 flex items-center gap-2 cursor-pointer">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Novo Tamanho
      </button>
    </div>
  </div>

  <hr class="border-t border-gray-300 my-4">

  <% if @tamanhos.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">A√ß√µes</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @tamanhos.each do |tamanho| %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="font-medium text-gray-900"><%= tamanho.tam_nome %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <div class="flex justify-center space-x-2">
                    <!-- Bot√£o Editar - Agora com modal -->
                    <button onclick="abrirTamanhoModal('<%= edit_tamanho_path(tamanho) %>')" 
                            class="text-blue-600 hover:text-blue-900 font-medium text-sm px-3 py-1 border border-blue-600 rounded hover:bg-blue-50 transition-colors duration-200 cursor-pointer">
                      Editar
                    </button>
                    
                    <!-- Bot√£o Excluir -->
                    <%= link_to tamanho_path(tamanho), 
                                method: :delete, 
                                data: { confirm: 'Tem certeza que deseja excluir este tamanho?' },
                                class: "text-red-600 hover:text-red-900 font-medium text-sm px-3 py-1 border border-red-600 rounded hover:bg-red-50 transition-colors duration-200" do %>
                      Excluir
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-8 text-center">
      <div class="max-w-md mx-auto">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhum tamanho cadastrado</h3>
        <p class="text-gray-500 mb-4">Comece cadastrando os tamanhos dos seus produtos.</p>
        <!-- Bot√£o do estado vazio tamb√©m com modal -->
        <button onclick="abrirTamanhoModal('<%= new_tamanho_path %>')" 
                class="px-6 py-2 bg-[#ed215e] text-white rounded-lg font-medium hover:bg-[#d91956] transition-colors duration-200 inline-flex items-center gap-2 cursor-pointer">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Novo Tamanho
        </button>
      </div>
    </div>
  <% end %>
</div>

<!-- Modal para Tamanhos -->
<dialog id="tamanhoModal" class="modal-base">
  <div class="modal-container">
    <!-- Header -->
    <div class="modal-header no-print">
      <h3 class="modal-title" id="tamanhoModalTitle">Carregando...</h3>
      <button type="button" onclick="fecharModal('tamanhoModal')" class="modal-close-btn" title="Fechar">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Content -->
    <div class="modal-content-container">
      <div id="tamanhoFormContent" class="modal-content">
        <div class="flex justify-center items-center py-8">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-tags-rosa"></div>
          <span class="ml-2 text-gray-600">Carregando...</span>
        </div>
      </div>
    </div>

    <!-- Footer - VAZIO -->
    <div class="modal-footer no-print">
      <!-- Sem bot√µes - j√° temos Cancelar nos formul√°rios -->
    </div>
  </div>
</dialog>

<style>
