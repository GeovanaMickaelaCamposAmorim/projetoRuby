<% content_for :page_title, "Clientes" %>
<% content_for :page_description, "Gerencie os clientes do sistema" %>
<% content_for :page_icon do %>
  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
  </svg>
<% end %>


<div class="h-full flex flex-col ">
  <div class="mb-8">

    <div class="flex justify-end items-center mb-2">
      <%= link_to 'Novo Cliente', new_cliente_path, class: 'bg-tags-rosa hover:bg-tags-rosa-dark text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200' %>
    </div>

    <hr class="border-t border-gray-300 my-4">

    <div class="flex flex-col sm:flex-row justify-end items-start sm:items-center gap-4 mb-6">
      
      <div class="w-full sm:w-2/3 bg-tags-branco">
        <%= form_with url: clientes_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-2" do %>
          <!-- Campo de busca por texto -->
          <div class="flex-1">
            <%= text_field_tag :search, params[:search], 
                  class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", 
                  placeholder: "Buscar por nome, email ou telefone..." %>
          </div>
          
          <!-- Filtro por status -->
          <div class="w-full sm:w-48">
            <%= select_tag :status, 
                  options_for_select([
                    ['Todos os status', ''],
                    ['Ativo', 'ativo'],
                    ['Inativo', 'inativo']
                  ], params[:status]),
                  class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>
          
          <!-- Botões -->
          <div class="flex gap-2">
            <%= submit_tag "Buscar", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
            <%= link_to "Limpar", clientes_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
          </div>
        <% end %>
      </div>
    </div>

    <% if @clientes.any? %>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contato</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">CPF</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @clientes.each do |cliente| %>
                <tr class="hover:bg-gray-50 transition-colors duration-150">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="font-medium text-gray-900"><%= cliente.cli_nome %></div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-600">
                      <div><%= cliente.cli_email %></div>
                      <% if cliente.cli_telefone1.present? %>
                        <div class="text-gray-500"><%= cliente.cli_telefone1 %></div>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <%= cliente.cli_cpf.present? ? cliente.cli_cpf : 'Não informado' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= cliente.status_class %>">
                      <%= cliente.status_display %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <div class="flex justify-center space-x-2">
                      <%= link_to 'Editar', edit_cliente_path(cliente), 
                                  class: 'text-blue-600 hover:text-blue-900 font-medium text-sm px-3 py-1 border border-blue-600 rounded hover:bg-blue-50 transition-colors duration-200' %>
                      <%= link_to 'Excluir', cliente_path(cliente), 
                                  method: :delete, 
                                  data: { confirm: 'Tem certeza que deseja excluir este cliente?' },
                                  class: 'text-red-600 hover:text-red-900 font-medium text-sm px-3 py-1 border border-red-600 rounded hover:bg-red-50 transition-colors duration-200' %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 text-center">
        <h5 class="text-lg font-medium text-blue-800 mb-2">
          <% if params[:search].present? || params[:status].present? %>
            Nenhum cliente encontrado com os filtros aplicados
          <% else %>
            Nenhum cliente cadastrado
          <% end %>
        </h5>
        <p class="text-blue-600">Clique em "Novo Cliente" para começar.</p>
      </div>
    <% end %>
  </div>
</div>