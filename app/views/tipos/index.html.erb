<script>
// ================================
// FUN√á√ïES GLOBAIS DE MODAL - MESMO DOS PRODUTOS
// ================================

// Fun√ß√£o para abrir qualquer modal
function abrirModal(modalId) {
  console.log('üéØ Abrindo modal:', modalId);
  const modal = document.getElementById(modalId);
  if (modal) {
    modal.showModal();
    modal.classList.add('modal-open');
    
    // Adicionar evento para fechar com ESC
    modal.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        fecharModal(modalId);
      }
    });
    
    // Adicionar backdrop click
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        fecharModal(modalId);
      }
    });
  } else {
    console.error('‚ùå Modal n√£o encontrado:', modalId);
  }
}

// Fun√ß√£o para fechar qualquer modal
function fecharModal(modalId) {
  console.log('üéØ Fechando modal:', modalId);
  const modal = document.getElementById(modalId);
  if (modal) {
    modal.close();
    modal.classList.remove('modal-open');
  }
}

// Fechar modal com Cancelar (fun√ß√£o global)
function cancelarModal() {
  console.log('üéØ Cancelando modal...');
  // Fecha qualquer modal aberto
  const modals = document.querySelectorAll('dialog[open]');
  modals.forEach(modal => {
    modal.close();
    modal.classList.remove('modal-open');
  });
}

// Event Listeners para todos os modais <dialog>
document.addEventListener('DOMContentLoaded', function() {
  console.log('üöÄ Fun√ß√µes de modal carregadas!');
  
  document.querySelectorAll('dialog').forEach(modal => {
    modal.addEventListener('cancel', function() {
      this.close();
    });
    
    modal.addEventListener('click', function(event) {
      if (event.target === this) {
        this.close();
      }
    });
  });
  
  // Adicionar event listeners para todos os bot√µes de fechar
  document.querySelectorAll('[onclick*="fecharModal"], [onclick*="cancelarModal"]').forEach(btn => {
    console.log('‚úÖ Bot√£o de fechar encontrado:', btn);
  });
});

// Tornar fun√ß√µes globais
window.abrirModal = abrirModal;
window.fecharModal = fecharModal;
window.cancelarModal = cancelarModal;

console.log('‚úÖ Fun√ß√µes globais de modal definidas!');
</script>

<script>
// Fun√ß√£o para abrir modal de tipos - COM DEBUG DETALHADO
async function abrirTipoModal(url) {
  try {
    console.log('üîçüîçüîç INICIANDO abrirTipoModal para:', url);
    
    // Mostrar loading
    document.getElementById('tipoFormContent').innerHTML = `
      <div class="flex justify-center items-center py-8">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-tags-rosa"></div>
        <span class="ml-2 text-gray-600">Carregando...</span>
      </div>
    `;

    // Abrir modal
    console.log('üéØ Tentando abrir modal...');
    if (typeof abrirModal === 'function') {
      console.log('‚úÖ abrirModal encontrada, chamando...');
      abrirModal('tipoModal');
    } else {
      console.error('‚ùå abrirModal n√£o est√° definida!');
      const modal = document.getElementById('tipoModal');
      if (modal) {
        console.log('‚úÖ Modal encontrado, abrindo diretamente');
        modal.showModal();
      } else {
        console.error('‚ùå Modal n√£o encontrado no DOM');
      }
    }

    // Buscar o formul√°rio
    console.log('üì° Fazendo fetch para:', url);
    const response = await fetch(url);
    console.log('üì° Response status:', response.status);
    console.log('üì° Response ok:', response.ok);
    
    const html = await response.text();
    console.log('üì° HTML recebido, tamanho:', html.length, 'caracteres');
    console.log('üì° Primeiros 500 caracteres:', html.substring(0, 500));
    
    // Extrair apenas o conte√∫do do formul√°rio
    const parser = new DOMParser();
    const doc = parser.parseFromString(html, 'text/html');
    console.log('üì° Documento parseado');
    
    const formContent = doc.querySelector('form');
    console.log('üì° Form encontrado:', formContent ? 'SIM' : 'N√ÉO');
    
    if (formContent) {
      console.log('‚úÖ Formul√°rio encontrado, inserindo no modal...');
      document.getElementById('tipoFormContent').innerHTML = formContent.outerHTML;
      
      // Atualizar o t√≠tulo do modal
      const modalTitle = document.getElementById('tipoModalTitle');
      if (modalTitle) {
        const isNew = url.includes('new');
        modalTitle.textContent = isNew ? 'Novo Tipo' : 'Editar Tipo';
        console.log('üìù T√≠tulo do modal atualizado para:', modalTitle.textContent);
      }
    } else {
      console.error('‚ùå Formul√°rio N√ÉO encontrado no HTML');
      // Vamos mostrar o HTML completo para debug
      document.getElementById('tipoFormContent').innerHTML = `
        <div class="text-center py-8">
          <div class="text-red-600 font-medium mb-4">Erro ao carregar formul√°rio</div>
          <div class="text-xs text-gray-500 text-left bg-gray-100 p-4 rounded max-h-40 overflow-auto">
            <strong>Debug HTML:</strong><br>
            ${html.substring(0, 1000)}...
          </div>
        </div>
      `;
    }
    
    console.log('‚úÖ‚úÖ‚úÖ abrirTipoModal FINALIZADO com sucesso');
    
  } catch (error) {
    console.error('‚ùå‚ùå‚ùå ERRO em abrirTipoModal:', error);
    document.getElementById('tipoFormContent').innerHTML = `
      <div class="text-center py-8 text-red-600">
        <p class="font-medium">Erro ao carregar</p>
        <p class="text-sm text-gray-500 mt-2">${error.message}</p>
      </div>
    `;
  }
}

// Fun√ß√£o para lidar com submit do formul√°rio de tipos
function handleTipoSubmit(event) {
  event.preventDefault();
  console.log('üì§ Submetendo formul√°rio de tipo...');
  
  const form = event.target;
  const formData = new FormData(form);
  
  fetch(form.action, {
    method: form.method,
    body: formData,
    headers: {
      'X-Requested-With': 'XMLHttpRequest',
      'Accept': 'text/html'
    }
  })
  .then(response => {
    console.log('üì§ Response do submit:', response.status);
    if (response.ok) {
      // Fechar modal e recarregar a p√°gina
      console.log('‚úÖ Submit bem-sucedido, fechando modal...');
      fecharModal('tipoModal');
      window.location.reload();
    } else {
      // Mostrar erros de valida√ß√£o
      console.log('‚ö†Ô∏è Submit com erros de valida√ß√£o');
      return response.text().then(html => {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        const errorForm = doc.querySelector('form');
        if (errorForm) {
          document.getElementById('tipoFormContent').innerHTML = errorForm.outerHTML;
        }
      });
    }
  })
  .catch(error => {
    console.error('‚ùå Erro no submit:', error);
    alert('Erro ao salvar tipo');
  });
}

// Adicionar event listener para forms din√¢micos de tipos
document.addEventListener('submit', function(event) {
  if (event.target.closest('#tipoFormContent')) {
    handleTipoSubmit(event);
  }
});

console.log('‚úÖ Script de tipos carregado!');
</script>