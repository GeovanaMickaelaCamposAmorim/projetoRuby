<%= form_with model: tamanho, data: { remote: false } do |form| %>
  <% if tamanho.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <h4 class="text-red-800 font-medium mb-2">
        <%= pluralize(tamanho.errors.count, "erro") %> impediram este tamanho de ser salvo:
      </h4>
      <ul class="text-red-700 list-disc list-inside">
        <% tamanho.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= form.label :tam_nome, "Nome do Tamanho", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :tam_nome, 
            class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", 
            placeholder: "Ex: P, M, G, GG, 38, 40, 42", 
            required: true %>
    </div>
  </div>

  <div class="mt-8 flex gap-3 justify-end">
    <%= form.submit tamanho.persisted? ? "Atualizar Tamanho" : "Salvar Tamanho", 
          class: "bg-tags-rosa hover:bg-tags-rosa-dark text-white font-medium py-2 px-6 rounded-lg transition-colors duration-200 cursor-pointer" %>
    
    <!-- BotÃ£o Cancelar AGORA FECHA O MODAL -->
    <button type="button" onclick="fecharModal('tamanhoModal')" 
            class="bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-6 rounded-lg transition-colors duration-200 cursor-pointer">
      Cancelar
    </button>
  </div>
<% end %>