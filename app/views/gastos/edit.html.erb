<%= form_with model: @gasto do |form| %>
  <!-- Campo Data -->
  <div class="space-y-2">
    <%= form.label :gas_data, "Data", class: "block text-sm font-medium text-gray-700 text-left" %>
    <%= form.date_field :gas_data, 
          class: "w-full rounded-lg border border-gray-300 px-4 py-3 text-sm 
                 focus:border-tags-rosa focus:ring-2 focus:ring-tags-rosa/20 
                 transition-all duration-200",
          required: true %>
  </div>

  <!-- Campo Descrição -->
  <div class="space-y-2">
    <%= form.label :gas_descricao, "Descrição", class: "block text-sm font-medium text-gray-700 text-left" %>
    <%= form.text_field :gas_descricao, 
          class: "w-full rounded-lg border border-gray-300 px-4 py-3 text-sm
                 focus:border-tags-rosa focus:ring-2 focus:ring-tags-rosa/20
                 transition-all duration-200",
          placeholder: "Descrição do gasto",
          required: true %>
  </div>

  <!-- Campo Valor -->
  <div class="space-y-2">
    <%= form.label :gas_valor, "Valor", class: "block text-sm font-medium text-gray-700 text-left" %>
    <div class="relative">
      <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500 text-sm">R$</span>
      <%= form.number_field :gas_valor, 
            step: 0.01,
            class: "w-full rounded-lg border border-gray-300 pl-10 pr-4 py-3 text-sm
                   focus:border-tags-rosa focus:ring-2 focus:ring-tags-rosa/20
                   transition-all duration-200",
            placeholder: "0,00",
            required: true %>
    </div>
  </div>

  <!-- Botões -->
  <div class="flex justify-end space-x-3 pt-4">
    <button type="button" onclick="fecharModal('gastoModal')" 
            class="px-5 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 
                   rounded-lg hover:bg-gray-50 transition-all duration-200">
      Cancelar
    </button>
    <%= form.submit "Atualizar Gasto", 
          class: "px-5 py-2.5 text-sm font-medium text-white bg-tags-rosa border border-transparent 
                 rounded-lg hover:bg-pink-700 transition-all duration-200 cursor-pointer" %>
  </div>
<% end %>