<% content_for :page_title, "Histórico de Vendas" %>
<% content_for :page_description, "Visualize e gerencie todas as vendas realizadas" %>
<% content_for :page_icon do %>
  <span class="material-symbols-outlined text-xl">receipt_long</span>
<% end %>

<div class="space-y-6">

  <!-- Stats Cards -->
  <div class="grid grid-cols-4 gap-4">
    <div class="bg-white rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-tags-gray">Vendas Hoje</p>
          <p class="text-2xl font-bold text-tags-black mt-1">R$ <%= number_to_currency(@vendas_hoje || 0, unit: '', delimiter: '.', separator: ',') %></p>
        </div>
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-tags-gray">Vendas Mês</p>
          <p class="text-2xl font-bold text-tags-black mt-1">R$ <%= number_to_currency(@vendas_mes || 0, unit: '', delimiter: '.', separator: ',') %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-tags-gray">Total Vendas</p>
          <p class="text-2xl font-bold text-tags-black mt-1"><%= @total_vendas || 0 %></p>
        </div>
        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-tags-gray">Ticket Médio</p>
          <p class="text-2xl font-bold text-tags-black mt-1">R$ <%= number_to_currency(@ticket_medio || 0, unit: '', delimiter: '.', separator: ',') %></p>
        </div>
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
<%= form_with url: vendas_path, method: :get, class: "bg-white rounded-lg p-4 flex items-center gap-4" do |form| %>
  <div class="flex-1 relative">
    <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
    </svg>
    <%= form.text_field :search, 
          value: params[:search],
          placeholder: "Buscar venda por ID ou cliente...", 
          class: "w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink" %>
  </div>

  <%= form.date_field :data, 
        value: params[:data],
        class: "px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink" %>

  <%= form.select :forma_pagamento, 
        options_for_select([
          ['Todas as formas', ''],
          ['PIX', 'PIX'],
          ['Cartão Crédito', 'Cartão Crédito'],
          ['Crediário', 'Crediário'],
          ['Dinheiro', 'Dinheiro']
        ], params[:forma_pagamento]),
        {},
        class: "px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-tags-pink" %>

  <!-- Botões de ação -->
  <div class="flex gap-2">
    <%= form.submit "Buscar", 
          class: "bg-tags-branco border border-tags-cinza text-tags-cinza hover:bg-tags-cinza hover:text-tags-branco font-medium py-2 px-4 rounded-lg transition-colors duration-200 cursor-pointer" %>
    
    <%= link_to "Limpar", vendas_path, 
          class: "px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors" %>
  </div>
<% end %>
  <!-- Table Corrigida -->
  <div class="bg-white rounded-lg overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">ID Venda</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Cliente</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Vendedor</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Data/Hora</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Valor Total</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Desconto</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Valor Final</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Pagamento</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-tags-gray uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% if @vendas&.any? %>
          <% @vendas.each do |venda| %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-6 py-4 text-sm font-medium text-tags-black">#<%= venda.id.to_s.rjust(5, '0') %></td>
              <td class="px-6 py-4 text-sm text-tags-gray"><%= venda.cliente&.cli_nome || 'Cliente Avulso' %></td>
              
              <!-- Vendedor -->
              <td class="px-6 py-4 text-sm text-tags-gray">
                <% if venda.user %>
                  <%= venda.user.usu_nome %>
                <% else %>
                  Sistema
                <% end %>
              </td>
              
              <!-- Data/Hora - CORRIGIDO: usando ven_data em vez de created_at -->
              <td class="px-6 py-4 text-sm text-tags-gray"><%= venda.ven_data.strftime('%d/%m/%Y %H:%M') %></td>
              
              <!-- Valores -->
              <td class="px-6 py-4 text-sm text-tags-gray">R$ <%= number_to_currency(venda.ven_valor_total, unit: '', delimiter: '.', separator: ',') %></td>
              <td class="px-6 py-4 text-sm text-tags-gray">R$ <%= number_to_currency(venda.ven_desconto || 0, unit: '', delimiter: '.', separator: ',') %></td>
              <td class="px-6 py-4 text-sm font-medium text-tags-black">R$ <%= number_to_currency(venda.ven_valor_final, unit: '', delimiter: '.', separator: ',') %></td>
              
              <!-- Forma de pagamento - CORRIGIDO: usando ven_forma_pagamento -->
              <td class="px-6 py-4">
                <span class="px-3 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                  <%= venda.ven_forma_pagamento&.capitalize || 'N/A' %>
                </span>
              </td>
              
              <td class="px-6 py-4">
                <div class="flex items-center gap-2">
                  <button onclick="verDetalhes(<%= venda.id %>)" class="p-2 text-blue-600 hover:bg-blue-50 rounded transition">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  </button>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="9" class="px-6 py-8 text-center text-gray-500">
              Nenhuma venda encontrada
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%# Modal para detalhes da venda - VERSÃO CORRIGIDA %>
  <dialog id="vendaModal" class="rounded-lg shadow-xl overflow-hidden">
    <div class="bg-white flex flex-col h-full">
      <!-- Header do Modal - Mais compacto -->
      <div class="flex items-center justify-between p-4 border-b border-gray-200 no-print bg-white sticky top-0 z-10">
        <h3 class="text-lg font-semibold text-tags-black">Detalhes da Venda</h3>
        <button onclick="fecharModal()" class="p-1 hover:bg-gray-100 rounded-lg transition">
          <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <!-- Conteúdo do Modal com scroll interno -->
      <div class="modal-content-container">
        <div id="modalContent" class="py-4">
          <!-- Os dados serão preenchidos via JavaScript -->
        </div>
      </div>

      <!-- Footer do Modal - Mais compacto -->
      <div class="flex justify-end gap-3 p-4 border-t border-gray-200 no-print bg-white sticky bottom-0">
        <button onclick="fecharModal()" class="px-4 py-2 text-sm text-red-600 border border-red-600 rounded-lg hover:bg-red-600 hover:text-white transition">
          Fechar
        </button>
        <button onclick="imprimirDetalhes()" class="px-4 py-2 bg-tags-rosa text-white text-sm rounded-lg hover:bg-tags-rosa-dark transition">
          Imprimir
        </button>
      </div>
    </div>
  </dialog>
</div>

<style>
  dialog::backdrop {
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
  }

  #vendaModal {
    border: none;
    padding: 0;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 95%;
    max-width: 700px;
    max-height: 80vh;
    border-radius: 12px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    overflow: hidden;
  }

  #vendaModal[open] {
    animation: modalSlideIn 0.3s ease-out;
  }

  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: translate(-50%, -48%) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
  }

  /* Conteúdo do modal com scroll interno */
  .modal-content-container {
    max-height: calc(80vh - 120px); /* Altura total menos header e footer */
    overflow-y: auto;
    padding: 0 1.5rem;
  }

  /* Estilos para impressão */
  @media print {
    /* Esconder tudo exceto o modal */
    body * {
      visibility: hidden;
    }
    
    #vendaModal, #vendaModal * {
      visibility: visible;
    }
    
    /* Reset completo do modal para impressão */
    #vendaModal {
      position: absolute !important;
      top: 0 !important;
      left: 0 !important;
      transform: none !important;
      margin: 0 !important;
      padding: 0 !important;
      width: 100% !important;
      max-width: 100% !important;
      max-height: none !important;
      box-shadow: none !important;
      border: none !important;
      border-radius: 0 !important;
      background: white !important;
    }
    
    /* Esconder elementos não necessários na impressão */
    .no-print {
      display: none !important;
    }
    
    /* Estilos específicos para o conteúdo na impressão */
    #modalContent {
      padding: 20px;
      font-size: 14px;
    }
    
    /* Melhorar legibilidade na impressão */
    .print-header {
      display: block !important;
      text-align: center;
      border-bottom: 2px solid #333;
      margin-bottom: 20px;
      padding-bottom: 10px;
    }
    
    .print-header h2 {
      font-size: 18px;
      margin: 0;
      color: #000;
    }
    
    .print-header p {
      font-size: 12px;
      color: #666;
      margin: 5px 0 0 0;
    }
    
    /* Ajustar tabelas para impressão */
    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 12px;
    }
    
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    
    th {
      background-color: #f8f9fa;
      font-weight: bold;
    }
    
    /* Garantir que cores importantes sejam visíveis */
    .text-red-600 { color: #dc2626 !important; }
    .text-green-600 { color: #16a34a !important; }
    .text-blue-600 { color: #2563eb !important; }
    
    /* Remover fundos coloridos que podem não imprimir bem */
    .bg-gray-50 { background-color: #f9fafb !important; }
    .bg-blue-100 { background-color: #dbeafe !important; }
    
    .print-section {
      margin-bottom: 15px;
      page-break-inside: avoid;
    }
    
    .no-break {
      page-break-inside: avoid;
    }
  }
</style>

<script>
// Função para abrir o modal e carregar os detalhes
async function verDetalhes(vendaId) {
  try {
    console.log('Buscando detalhes da venda:', vendaId);
    
    // Mostrar loading
    document.getElementById('modalContent').innerHTML = `
      <div class="flex justify-center items-center py-8">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-tags-pink"></div>
        <span class="ml-2 text-gray-600">Carregando...</span>
      </div>
    `;

    // Abrir modal
    document.getElementById('vendaModal').showModal();

    // Fazer requisição para buscar detalhes da venda
    const response = await fetch(`/vendas/${vendaId}/detalhes`);
    
    console.log('Status da resposta:', response.status);
    
    if (!response.ok) {
      const errorData = await response.json();
      throw new Error(errorData.error || `Erro HTTP: ${response.status}`);
    }
    
    const data = await response.json();
    console.log('Dados recebidos:', data);

    // Preencher modal com os dados
    preencherModal(data);
    
  } catch (error) {
    console.error('Erro completo:', error);
    document.getElementById('modalContent').innerHTML = `
      <div class="text-center py-8">
        <div class="text-red-600 mb-2">
          <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-red-800 mb-2">Erro ao carregar detalhes</h3>
        <p class="text-gray-600">${error.message}</p>
      </div>
    `;
  }
}

// Função para preencher o modal com os dados
function preencherModal(dados) {
  const modalContent = document.getElementById('modalContent');
  
  modalContent.innerHTML = `
    <!-- Cabeçalho da impressão -->
    <div class="print-header hidden print:block text-center mb-4 border-b pb-3">
      <h2 class="text-lg font-bold">Detalhes da Venda}</h2>
      <p class="text-gray-600 text-sm">Emitido em: ${new Date().toLocaleString('pt-BR')}</p>
    </div>

    <!-- Informações Principais - Layout mais compacto -->
    <div class="grid grid-cols-2 gap-3 mb-4">
      <div class="bg-gray-50 p-3 rounded">
        <label class="text-xs text-gray-500 block mb-1">ID Venda</label>
        <p class="font-semibold text-sm">#${dados.id.toString().padStart(5, '0')}</p>
      </div>
      <div class="bg-gray-50 p-3 rounded">
        <label class="text-xs text-gray-500 block mb-1">Data/Hora</label>
        <p class="font-semibold text-sm">${formatarData(dados.ven_data)}</p>
      </div>
      <div class="bg-gray-50 p-3 rounded">
        <label class="text-xs text-gray-500 block mb-1">Cliente</label>
        <p class="font-semibold text-sm">${dados.cliente?.cli_nome || 'Cliente Avulso'}</p>
      </div>
      <div class="bg-gray-50 p-3 rounded">
        <label class="text-xs text-gray-500 block mb-1">Vendedor</label>
        <p class="font-semibold text-sm">${dados.user?.usu_nome || 'Sistema'}</p>
      </div>
    </div>

    <!-- Forma de Pagamento e Valores -->
    <div class="bg-blue-50 p-3 rounded-lg mb-3">
      <div class="grid grid-cols-4 gap-3 items-center">
        <!-- Forma de Pagamento - Lado Esquerdo -->
        <div>
          <label class="text-xs text-gray-500 mb-1 block">Forma de Pagamento</label>
          <p class="font-semibold">
            <span class="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded">
              ${dados.ven_forma_pagamento?.toUpperCase() || 'N/A'}
            </span>
          </p>
        </div>
        
        <!-- Valores - Lado Direito -->
        <div class="text-center">
          <label class="text-xs text-gray-500">Valor Total</label>
          <p class="font-bold text-base">R$ ${formatarMoeda(dados.ven_valor_total)}</p>
        </div>
        <div class="text-center">
          <label class="text-xs text-gray-500">Desconto</label>
          <p class="font-bold text-base text-red-600">R$ ${formatarMoeda(dados.ven_desconto || 0)}</p>
        </div>
        <div class="text-center">
          <label class="text-xs text-gray-500">Valor Final</label>
          <p class="font-bold text-base text-green-600">R$ ${formatarMoeda(dados.ven_valor_final)}</p>
        </div>
      </div>
    </div>

    

    <!-- Itens da Venda - Tabela mais compacta -->
    <div>
      <label class="text-xs text-gray-500 mb-2 block">Itens da Venda</label>
      <div class="border border-gray-200 rounded overflow-hidden">
        <table class="w-full text-xs">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-3 py-2 text-left">Produto</th>
              <th class="px-2 py-2 text-center w-16">Qtd</th>
              <th class="px-2 py-2 text-right w-24">Unit.</th>
              <th class="px-2 py-2 text-right w-24">Subtotal</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            ${dados.itens?.map(item => `
              <tr>
                <td class="px-3 py-2">${item.produto?.pro_nome || 'Produto não encontrado'}</td>
                <td class="px-2 py-2 text-center">${item.quantidade}</td>
                <td class="px-2 py-2 text-right">R$ ${formatarMoeda(item.preco_unitario)}</td>
                <td class="px-2 py-2 text-right">R$ ${formatarMoeda(item.subtotal)}</td>
              </tr>
            `).join('') || '<tr><td colspan="4" class="px-3 py-2 text-center text-gray-500 text-xs">Nenhum item encontrado</td></tr>'}
          </tbody>
        </table>
      </div>
    </div>

    <!-- Rodapé da impressão -->
    <div class="print-footer hidden print:block mt-6 pt-3 border-t border-gray-300 text-center text-xs text-gray-600">
      <p>Tags Store - Sistema de Gestão</p>
    </div>
  `;
}

// Função para fechar o modal
function fecharModal() {
  document.getElementById('vendaModal').close();
}

// Função para formatar moeda
function formatarMoeda(valor) {
  return parseFloat(valor).toFixed(2).replace('.', ',');
}

// Função para formatar data
function formatarData(dataString) {
  const data = new Date(dataString);
  return data.toLocaleString('pt-BR');
}

// Função para imprimir
function imprimirDetalhes() {
  window.print();
}

// Fechar modal com ESC
document.getElementById('vendaModal').addEventListener('cancel', fecharModal);

// Fechar modal clicando no backdrop
document.getElementById('vendaModal').addEventListener('click', function(event) {
  if (event.target === this) {
    fecharModal();
  }
});
</script>