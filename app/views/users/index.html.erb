<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Cadastro de Funcionários</h1>

    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
      <%= link_to 'Novo Funcionário', new_user_path, class: 'bg-pink-600 hover:bg-pink-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200' %>
      
      <div class="w-full sm:w-2/3">
        <%= form_with url: users_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-2" do %>
          <!-- Campo de busca -->
          <div class="flex-1">
            <%= text_field_tag :search, params[:search], 
                  class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", 
                  placeholder: "Buscar por nome ou email..." %>
          </div>
          
          <!-- Filtro por tipo -->
          <div class="w-full sm:w-48">
            <%= select_tag :usu_tipo, 
                  options_for_select([
                    ['Todos os tipos', ''],
                    ['Administrador', 'admin'],
                    ['Vendedor', 'vendedor']
                  ], params[:usu_tipo]),
                  class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>
          
          <!-- Botões -->
          <div class="flex gap-2">
            <%= submit_tag "Buscar", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
            <%= link_to "Limpar", users_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
          </div>
        <% end %>
      </div>
    </div>

    <% if @users.any? %>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Funcionário</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contato</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tipo</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @users.each do |user| %>
                <tr class="hover:bg-gray-50 transition-colors duration-150">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="font-medium text-gray-900"><%= user.usu_nome %></div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-600">
                      <div><%= user.usu_email %></div>
                      <div class="text-gray-500"><%= user.usu_telefone %></div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                      <%= user.usu_tipo == 'admin' ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                      <%= user.usu_tipo == 'admin' ? 'Administrador' : 'Vendedor' %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                      <%= user.usu_status == 'ativo' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                      <%= user.usu_status == 'ativo' ? 'Ativo' : 'Inativo' %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center">
                    <div class="flex justify-center space-x-2">
                      <%= link_to 'Editar', edit_user_path(user), 
                                  class: 'text-blue-600 hover:text-blue-900 font-medium text-sm px-3 py-1 border border-blue-600 rounded hover:bg-blue-50 transition-colors duration-200' %>
                      <%= link_to 'Excluir', user_path(user), 
                                  method: :delete, 
                                  data: { confirm: 'Tem certeza que deseja excluir este funcionário?' },
                                  class: 'text-red-600 hover:text-red-900 font-medium text-sm px-3 py-1 border border-red-600 rounded hover:bg-red-50 transition-colors duration-200' %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 text-center">
        <h5 class="text-lg font-medium text-blue-800 mb-2">
          <% if params[:search].present? || params[:usu_tipo].present? %>
            Nenhum funcionário encontrado com os filtros aplicados
          <% else %>
            Nenhum funcionário cadastrado
          <% end %>
        </h5>
        <p class="text-blue-600">Clique em "Novo Funcionário" para começar.</p>
      </div>
    <% end %>
  </div>
</div>