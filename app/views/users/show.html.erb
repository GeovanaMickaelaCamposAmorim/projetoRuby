<div class="space-y-6">
  <div class="text-center">
    <div class="w-16 h-16 bg-tags-rosa rounded-full flex items-center justify-center mx-auto mb-3">
      <span class="text-white text-xl font-medium">
        <%= @user.usu_nome&.first&.upcase || @user.usu_email.first.upcase %>
      </span>
    </div>
    <h3 class="text-xl font-bold text-gray-900"><%= @user.usu_nome %></h3>
    <p class="text-gray-500"><%= @user.usu_tipo == 'admin' ? 'Administrador' : 'Vendedor' %></p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-4">
      <h4 class="text-lg font-medium text-gray-900 border-b pb-2">Informações Pessoais</h4>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Nome Completo</label>
        <div class="w-full bg-gray-50 border border-gray-300 rounded-lg px-4 py-2 text-gray-900">
          <%= @user.usu_nome %>
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <div class="w-full bg-gray-50 border border-gray-300 rounded-lg px-4 py-2 text-gray-900">
          <%= @user.usu_email %>
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Telefone</label>
        <div class="w-full bg-gray-50 border border-gray-300 rounded-lg px-4 py-2 text-gray-900">
          <%= @user.usu_telefone %>
        </div>
      </div>
    </div>

    <div class="space-y-4">
      <h4 class="text-lg font-medium text-gray-900 border-b pb-2">Status do Sistema</h4>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Tipo de Usuário</label>
        <div class="w-full bg-gray-50 border border-gray-300 rounded-lg px-4 py-2">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
            <%= @user.usu_tipo == 'admin' ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
            <%= @user.usu_tipo == 'admin' ? 'Administrador' : 'Vendedor' %>
          </span>
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
        <div class="w-full bg-gray-50 border border-gray-300 rounded-lg px-4 py-2">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
            <%= @user.usu_status == 'ativo' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @user.usu_status == 'ativo' ? 'Ativo' : 'Inativo' %>
          </span>
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Data de Cadastro</label>
        <div class="w-full bg-gray-50 border border-gray-300 rounded-lg px-4 py-2 text-gray-900">
          <%= @user.created_at.strftime("%d/%m/%Y %H:%M") %>
        </div>
      </div>
    </div>
  </div>


</div>