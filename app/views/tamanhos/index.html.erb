<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Tamanhos</h1>
    <p class="text-gray-600">Gerencie os tamanhos dos produtos</p>

    <div class="flex justify-between items-center mt-6">
      <%= link_to new_tamanho_path, class: "px-6 py-3 bg-[#ed215e] text-white rounded-lg font-medium hover:bg-[#d91956] transition-colors duration-200" do %>
        + Novo Tamanho
      <% end %>
    </div>
  </div>

  <% if @tamanhos.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @tamanhos.each do |tamanho| %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="font-medium text-gray-900"><%= tamanho.tam_nome %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <div class="flex justify-center space-x-2">
                    <%= link_to edit_tamanho_path(tamanho), 
                                class: "text-blue-600 hover:text-blue-900 font-medium text-sm px-3 py-1 border border-blue-600 rounded hover:bg-blue-50 transition-colors duration-200" do %>
                      Editar
                    <% end %>
                    <%= link_to tamanho_path(tamanho), 
                                method: :delete, 
                                data: { confirm: 'Tem certeza que deseja excluir este tamanho?' },
                                class: "text-red-600 hover:text-red-900 font-medium text-sm px-3 py-1 border border-red-600 rounded hover:bg-red-50 transition-colors duration-200" do %>
                      Excluir
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-8 text-center">
      <div class="max-w-md mx-auto">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhum tamanho cadastrado</h3>
        <p class="text-gray-500 mb-4">Comece cadastrando os tamanhos dos seus produtos.</p>
        <%= link_to new_tamanho_path, class: "px-6 py-2 bg-[#ed215e] text-white rounded-lg font-medium hover:bg-[#d91956] transition-colors duration-200" do %>
          + Novo Tamanho
        <% end %>
      </div>
    </div>
  <% end %>
</div>