<%= form_with model: user, class: "max-w-2xl mx-auto" do |form| %>
  <% if @user.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <h4 class="text-red-800 font-medium mb-2">
        <%= pluralize(@user.errors.count, "erro") %> impediram este funcionário de ser salvo:
      </h4>
      <ul class="text-red-700 list-disc list-inside">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-4">
      <h5 class="text-lg font-medium text-gray-900 border-b pb-2">Dados Pessoais</h5>
      
      <div>
        <%= form.label :usu_nome, "Nome completo", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :usu_nome, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true %>
      </div>

      <div>
        <%= form.label :usu_email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.email_field :usu_email, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true %>
      </div>

      <div>
        <%= form.label :usu_telefone, "Telefone", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :usu_telefone, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", required: true %>
      </div>
    </div>

    <div class="space-y-4">
      <h5 class="text-lg font-medium text-gray-900 border-b pb-2">Acesso</h5>
      
      <div>
        <%= form.label :usu_tipo, "Tipo de Usuário", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :usu_tipo, 
              [['Vendedor', 'vendedor'], ['Administrador', 'admin']], 
              {}, 
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <%= form.label :usu_status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :usu_status, 
              [['Ativo', 'ativo'], ['Inativo', 'inativo']], 
              {}, 
              class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <p class="text-yellow-800 text-sm">
          <strong>Senha padrão:</strong> 123456<br>
          O funcionário poderá alterar a senha após o primeiro login.
        </p>
      </div>
    </div>
  </div>

  <div class="mt-8 flex gap-3">
    <%= form.submit "Salvar Funcionário", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors duration-200 cursor-pointer" %>
    <%= link_to "Cancelar", users_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-6 rounded-lg transition-colors duration-200" %>
  </div>
<% end %>